mixin form(attributes)
  form.form.contact-form&attributes(attributes)
    block

mixin input-name(text)
  .form__item
    input(
      aria-label=(text=text)
      name="first_name"
      type="text"
      required
      placeholder=(text=text)
      maxlenght="255"
    ).form-control.form-control--first-name

mixin input-last-name(text)
  .form__item
    input(
      aria-label=(text=text)
      name="last-name"
      type="text"
      required
      placeholder=(text=text)
      maxlenght="255"
    ).form-control.form-control--last-name

mixin input-email(text)
  .form__item
    input(
      aria-label=(text=text)
      name="email"
      type="email"
      required
      placeholder=(text=text)
      maxlenght="255"
    ).form-control.form-control--first-email

mixin input-phone(text)
  .form__item
    input(
      aria-label=(text=text)
      name="phone"
      type="text"
      required
      placeholder=(text=text)
      minlenght="5"
      maxlenght="255"
      data-parsley-pattern="[0-9 ()+-.]+"
      data-parsley-required-message="Please enter your phone number"
    ).form-control.form-control--phone

mixin input-password(text)
  .form__item
    input(
      name="password"
      type="password"
      required
      placeholder=(text=text)
      maxlenght="255"
    ).form-control.form-control--password

mixin input-password-confirm(text)
  .form__item
    input(
      name="password-confirm"
      type="password"
      required
      placeholder=(text=text)
      maxlenght="255"
    ).form-control.form-control--password-confirm

mixin input-checkbox(text, name, legend)
  -
    var id = name.id || "";

  .form__item.form__item--checkbox
    fieldset.checkbox
      legend
        span.accessibility-hidden-content
          | !{legend}
      input.custom-checkbox(id= id name="checkbox" type="checkbox")
      label.form-control--checkbox-btn(for= id)
        span.check-icon
        | !{text}
