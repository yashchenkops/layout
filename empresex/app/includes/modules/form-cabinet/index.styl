.cabinet-form
  margin-bottom 20px

.form-cabinet-input
  display block
  border-radius 8px
  background-color $grey
  font-weight 500
  font-size 12px
  line-height 15px
  color $text
  padding 5px 10px
  margin-bottom 10px
  border none
  width 100%

  &::placeholder
    color #A9A9A9

  &--textarea
    resize none
    min-height 150px
    scrollbar()

.selectric
  border-radius 8px
  background-color $grey
  border none
  height 25px

  .label
    font-weight 500
    font-size 12px
    line-height 2.2
    color $labelColor
    height 100%
    margin-left 10px

  .button
    background-color transparent
    height 30px

    &::after
      border none
      top 0
      right 8px
      background url("data:image/svg+xml;base64,") no-repeat
      width 15px
      height 10px

.selectric-wrapper
  margin-bottom 8px

  &.selectric-selected
    .selectric
      .label
        color $text

.selectric-scroll
  background-color $grey
  border-radius 8px
  scrollbar()

.selectric-items
  border-radius 10px
  border none
  box-shadow none

.selectric-items li
  font-weight 400
  font-size 12px
  line-height 15px
  color $text

  &:hover
    background-color #adadad

input[type="file"]
  display none

.form-cabinet-upload
  position relative
  cursor pointer
  textOverflow()
  color $labelColor
  padding 5px 38px 5px 10px

  &::after
    position absolute
    content ""
    top 50%
    right 15px
    transform translateY(-50%)
    background url("data:image/svg+xml;base64,") no-repeat
    width 16px
    height 12px

.form-cabinet--uploaded
  color $text

.form-cabinet-item
  position relative

  &.form-cabinet-item--password
    .form-cabinet-input
      padding 5px 38px 5px 10px

  &--switch
    display flex
    align-items center
    gap 10px

.form-cabinet-item-title
  font-weight 400
  font-size 12px
  line-height 15px
  margin-bottom 8px

.form-cabinet-item-row
  display flex
  align-items center
  justify-content space-between

  .form-cabinet-item
    margin-right 18px

    &:last-child
      margin-right 0

.password-visibility
  position absolute
  right 15px
  top 30px
  width 15px
  height 11px
  background url("data:image/svg+xml;base64,") no-repeat
  cursor pointer

  &.view
    background url("data:image/svg+xml;base64,") no-repeat
    height 14px
    top 29px

// switch-checkbox
.switch
  position relative
  display inline-block
  width 37px
  height 18px
  border 1px solid $white
  border-radius 24px

  &-text
    font-weight 400
    font-size 14px
    line-height 17px

  input
    opacity 0
    width 0
    height 0

  &-span
    position absolute
    cursor pointer
    inset 0
    background-color $grey
    transition 0.4s
    border-radius 34px

    &:before
      position absolute
      content ""
      height 18px
      width 18px
      left 0
      bottom -1px
      background-color #9C9C9C
      border 1px solid $white
      transition 0.4s all
      border-radius 50%

input:focus + .switch-span
  box-shadow 0 0 1px #2196F3

input:checked + .switch-span:before
  transform translateX(18px)
  background-color #272727

// switch-checkbox
.form-cabinet-between
  position relative
  display flex
  align-items center
  gap 10px
  max-width 289px
  margin-bottom 40px

  &:last-child
    margin-bottom 0

  &::before
    position absolute
    content ""
    bottom 0
    width 100%
    height 30px
    background #151515
    border-radius 21px
    z-index -1

  .form-cabinet-item-title
    position absolute
    top -20px

  .form-cabinet-input
    margin-bottom 0
    padding 7.5px 18px

  span
    font-weight 600
    font-size 12px
    line-height 15px
    text-transform uppercase

// date-picker
.datepicker-dropdown
  border none
  box-shadow none
  overflow hidden

.datepicker-container
  background radial-gradient(152.17% 138.33% at 54% 126.67%, #202830 0%, #313E47 100%)
  border-radius 8px

.datepicker-panel>ul>li
  background-color transparent

.datepicker-panel>ul>li.disabled,
.datepicker-panel>ul>li.disabled:hover
  background-color transparent
  color rgba(4, 4, 4, 0.5)

.datepicker-panel>ul>li:hover
  background $red
  border-radius 1px
  color $white

.datepicker-panel>ul[data-view=week]>li,
.datepicker-panel>ul[data-view=week]>li:hover
  background-color transparent

.datepicker-top-left:before,
.datepicker-top-right:before
  content none

@media (max-width 768px)
  .selectric
    .button
      padding 0

      &::after
        margin 10px
        right 3px