.button
  display inline-block
  font-size 14px
  line-height 1.4
  font-weight 500
  padding 8px 11px
  background-color $text
  border-radius 8px
  transition all 0.3s
  color $white
  text-align center
  cursor pointer

  &__buy
    position relative

    &::after
      content ""
      position absolute
      left 0
      top 15px
      width 100%
      height 80%
      background-color #000
      border-radius 10px
      z-index 1

    &-main
      position relative
      transition 0.3s all
      display block
      color $white
      font-size 18px
      font-weight 500
      border-radius 10px
      padding 12px 50px
      z-index 2
      overflow hidden
      background-color $text

      &::before
        position absolute
        content ""
        top -340%
        left -38%
        width 350px
        height 350px
        background-image url("data:image/svg+xml;base64,")
        animation buttonBackgroundRotate 30s linear infinite

      background-repeat no-repeat
      background-position center

      &:hover
        transform translateY(2px)

      &:hover,
      &:focus-visible
        box-shadow none

      &:active
        transform translateY(5px)
