@import "base/_global"
@import "../includes/modules/form-cabinet/index.styl"

.transaction
  container-cabinet()
  display flex
  align-items flex-start
  justify-content center
  gap 40px

.cabinet__transaction-payment,
.cabinet__transaction-history
  min-height 600px
  max-width 440px

.cabinet__transaction-title,
.cabinet__transaction-history-title
  margin-bottom 48px
  font-size 14px
  font-weight 700
  line-height 14px

.cabinet__transaction-history-title
  margin-bottom 30px

.form-cabinet-between
  max-width 100%
  margin-bottom 30px

  span
    text-transform lowercase

.form-cabinet-left
  margin-bottom 10px

.form-cabinet-buttons
  display flex
  justify-content flex-end
  margin-top 20px
  gap 10px

  .button
    &:first-child
      background rgba(39, 39, 39, 0.2)
      color $text

.cabinet__transaction-history
  position relative
  padding-top 38px

.cabinet__transaction-history-title
  margin-bottom 30px

.cabinet__transaction-history-table
  margin 0
  padding 0
  width 100%
  table-layout fixed

  tr
    padding 0.35em

  td
    text-align center
    word-wrap break-word
    padding 10px 0
    font-size 10px
    font-weight 500
    line-height 10px

  th
    font-size 9px
    font-weight 300
    line-height 14px

  @media screen and (max-width 600px)
    table
      border 0

    thead
      border none
      clip rect(0 0 0 0)
      height 1px
      margin -1px
      overflow hidden
      padding 0
      position absolute
      width 1px

    tr
      display block
      margin-bottom 0.625em

    td
      border-bottom 1px solid #919191
      display block
      font-size 12px
      line-height 1.3
      text-align right

    td::before
      content attr(data-label)
      float left
      font-weight bold
      text-transform uppercase

    td:last-child
      border-bottom 0

.pagination
  margin-top 30px

  .prev,
  .next
    path
      fill $text

.pagination-inner
  display flex
  align-items center
  justify-content center

  li
    margin-right 15px

    &:last-child
      margin-right 0

    a,
    span
      font-weight 500
      font-size 16px
      line-height 20px
      text-align center
      color $text
      height 15px

    &.active
      a,
      span
        font-weight 700
        font-size 18px

.prev
  margin-right 15px

@import "media/_media-transaction-history.styl"