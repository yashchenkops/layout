@import url("https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700;800&display=swap")

$font = "Montserrat", sans-serif

@import "_vars"
@import "../includes/header/index.styl"
@import "../includes/footer/index.styl"
@import "../includes/modules/dark-mode/index.styl"
@import "../includes/modules/form/index.styl"
@import "../includes/modules/button/index.styl"
@import "../includes/modules/pictures/index.styl"
@import "../includes/modules/modals/index.styl"

html
  height 100%
  box-sizing border-box
  scroll-behavior smooth
  font-size 62.5% // 1rem =10px; 10px/16px = 62.5%

  @media (max-width 1024px)
    font-size 50% // 1rem =8px; 8px/16px = 50%

  @media (max-width 768px)
    font-size 40% // 1rem = 6.4; 6.4px/16px = 40%

*,
*::before,
*::after
  box-sizing inherit
  padding 0
  margin 0

body
  display flex
  flex-direction column
  height 100%
  font-family $font
  font-weight 400
  background-color $bg
  color $text
  overflow-x hidden
  background-image url("../img/global/bg-img.svg")
  background-repeat no-repeat
  background-size 1400px
  background-position -430px 220px
  background-attachment fixed
  min-width 320px

main
  flex 1 0 auto

a
  display inline-block
  text-decoration none
  color $text
  outline none

  &:focus-visible
    outline solid

p,
span,
ul,
ol,
li,
input,
textarea
  font-family $font
  color $text

ul,
li,
ol
  list-style none
  padding 0
  margin 0

h1,
h2,
h3,
h4
  font-family $font
  font-weight 500
  margin 0
  padding 0

h1
  font-size 7rem
  line-height 6rem
  font-weight 700

h2
  font-size 6rem

h3
  font-size 2rem

h4
  font-size 1.6rem

button
  border none
  outline none
  cursor pointer
  background-color transparent
  color $text
  transition all 0.1s

  &:focus-visible
    outline solid

.main
  padding-top 250px
  padding-bottom 100px

.main
  overflow hidden

.scroll-block
  overflow hidden

.section-title,
.section-title span
  font-family $font
  color $text
  text-transform uppercase
  text-align center

.inner-title
  font-family $font
  color $text
  font-size 16px
  line-height 1.3
  font-weight 700
  text-align left

.cabinet__block
  background-color $white
  border-radius 20px
  padding 30px 40px
  max-width 400px
  width 100%

.mobile__cards
  display none

  .header__cards
    height 116px

.button__buy--mobile
  display none

#openingAnim,
#loaderAnim
  background-color $text
  display none
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  z-index 1000
  width 100vw
  height 100vh

@media (max-width 1000px)
  body
    background-image none

  .main
    padding 80px 0 150px

  .button__buy--mobile
    display block
    padding 20px 13px 40px 13px
    position fixed
    bottom 0
    width 100%

    .button__buy
      &::after
        max-width 335px
        left 50%
        transform translateX(-50%)

    .button__buy-main
      text-align center
      max-width 335px
      margin 0 auto

      &::before
        left -2.1%

  .mobile__cards
    display block
    margin-bottom 10px

    .header__cards-item
      min-width 150px

  &.dark
    background-image none

@media (max-width 768px)
  .cabinet__block
    padding 20px 15px !important
