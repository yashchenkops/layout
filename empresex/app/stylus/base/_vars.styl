$white = #fff
$grey = #F3F3F3
$bg = #F5F5F5
$labelColor = #27272780
$dark = rgba(243, 243, 243, 0.05)
$darkButton = rgba(255, 255, 255, 0.2)
$darkText = rgba(255, 255, 255, 0.5)
$text = #272727
$red = #FF2727

container-cabinet()
  max-width 1310px
  margin 0 auto
  padding 0 15px

scrollbar()
  &::-webkit-scrollbar
    width 7px

  &::-webkit-scrollbar-track
    background $grey
    border-radius 20px

  &::-webkit-scrollbar-thumb
    background-color $labelColor
    border-radius 20px

textOverflow()
  white-space nowrap
  overflow hidden
  text-overflow ellipsis

lineClamp(lines)
  display -webkit-box
  -webkit-line-clamp lines
  -webkit-box-orient vertical
  overflow hidden

@keyframes buttonBackgroundRotate
  from
    transform rotate(0deg)

  to
    transform rotate(360deg)
