@import "base/_global"
@import "../includes/modules/tabs/index.styl"
@import "../includes/modules/form-cabinet/index.styl"

.support
  container-cabinet()
  display flex
  align-items flex-start
  justify-content center
  gap 40px

.cabinet__faq,
.cabinet__user-verification
  min-height 600px
  max-width 440px

.cabinet__faq-title
  margin-bottom 28px

.cabinet__faq-item
  display block
  padding 14px 26px
  background-color $grey
  border-radius 5px
  margin-bottom 20px

  &:last-child
    margin-bottom 0

.cabinet__faq-item-title
  font-size 14px
  font-weight 600
  line-height normal
  margin-bottom 3px

.cabinet__faq-item-desription
  font-size 12px
  font-weight 300
  line-height normal
  text-decoration-line underline

.cabinet__support-subtitle
  font-size 14px
  font-weight 400
  line-height normal
  margin-bottom 18px

.cabinet__support-button
  background-color $grey
  border-radius 12px
  padding 7px 10px
  width 100%
  text-align left

  span
    margin-left 10px
    color $text
    font-size 14px
    font-weight 500
    line-height normal

.cabinet__support-form
  display none
  margin-top 20px

.cabinet__support-form-text
  font-size 12px
  font-weight 400
  line-height normal
  margin-bottom 8px

.cabinet__support-form-button
  display block
  margin-left auto

@import "media/_media-support.styl"