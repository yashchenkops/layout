      .intro__middle
        .intro__middle-mint
          h4.mint-title Mint NFT
            +tooltip({
              info: "MINT block: Green - you have an NFT of that level. Orange - you don't own this NFT and it is available for minting. Black - not available for minting. To mint NFT, you need to select a price level and click on it."
            })

          .mint-blocks
            a.mint-block.mint-block--green(href="#")
              span(title="0.125") 0.125
              span BNB
            a.mint-block.mint-block--green(href="#")
              span(title="0.25") 0.25
              span BNB
            a.mint-block.mint-block--orange(href="#")
