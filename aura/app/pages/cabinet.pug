block main
  section.intro
    .intro__inner
      .intro__top
        .intro__top-left
          .nft
            h4.nft__title Your NFT
            ul.nft__inner
              li.nft__li(title="Lorem ipsum dolor sit amet.") AURA NFT Power 50
              li.nft__li(title="Lorem ipsum dolor sit amet.") AURA NFT Power 100
              li.nft__li(title="Lorem ipsum dolor sit amet.") AURA NFT Power 200
            button(data-izimodal-open="#modal-nft").nft__all Watch all

          .qualification
            h4.qualification__title Qualification
            .qualification__info
              .qualification__info-first
                .first-title STATUS: 
                .first-info YES
              .qualification__info-second
                button(data-izimodal-open="#modal-error").turbo Buy Turbo
                +tooltip({
                  info: "I - Qualification purchase: You don't need to attract new members to participate in passive income. After purchasing a qualification, you will automatically queue up for payment."
                })

        .intro__top-right
          .top
            .field.field--wallet
              h4.field__title My wallet:
              button.field__main
                .field__inner
                  span 0x2598763 .. Dft157dfe589w
                .field__icon
                  img(src="img/cabinet/wallet-icon.svg", alt="Wallet icon")

            .field.field--invite
              h4.field__title Link for invitation:
              button.field__main
                .field__inner
                  span https://your-site.io/RefID
                .field__icon
                  img(src="img/cabinet/copy-icon.svg", alt="copy icon")

          .bottom
            .reward
              h4.reward__title Balance:
                span.reward__reward(title="0.425 BNB") 0.425 BNB
              h4.reward__title Reward:
                span.reward__reward(title="0.625 BNB") 0.625 BNB
              .reward__buttons
                +button(href="#" data-izimodal-open="#modal-error")
                  | Withdraw
                +button(href="#spreadsheet")
                  | View History
            
            .invited
