mixin footer()
  footer.footer
    .footer__inner
      .footer__left 
        a.footer__logo(href="#")
          img(src="img/icons/logo.svg", alt="Logo footer")
        p.footer__info
          | Smart and fast product to help you meet your clients' needs.

      .footer__center
        nav.footer__menu
          ul.footer__menu-ul
            li.footer__menu-li
              a.footer__menu-link(href="#") About Us
            li.footer__menu-li
              a.footer__menu-link(href="#") Aura Pass
          ul.footer__menu-ul
            li.footer__menu-li
              a.footer__menu-link(href="#") How it works
            li.footer__menu-li
              a.footer__menu-link(href="#") Benefits
          ul.footer__menu-ul
            li.footer__menu-li
              a.footer__menu-link(href="#") Roadmap
            li.footer__menu-li
              a.footer__menu-link(href="#") Levels
          ul.footer__menu-ul
            li.footer__menu-li
              a.footer__menu-link(href="#") Contacts
            li.footer__menu-li
              a.footer__menu-link(href="#") FAQ

      .footer__right 
        span.footer__follow Follow Us:
        .footer__icons
          each key, value in {'img/icons/footer-twitter.svg': 'Twitter', 'img/icons/footer-facebook.svg': 'Facebook', 'img/icons/footer-discord.svg': 'Discord', 'img/icons/footer-post.svg': 'Post'}
            a.footer__icons-item(href="#" target="_blank")
              img(src=value, alt=key)