.levels__blocks
  display flex
  align-items flex-start
  justify-content space-between

  .swiper
    width 100%
    overflow visible

    .swiper-wrapper
      width 1112px
      padding-bottom 30px

      .swiper-slide
        &:nth-child(1)
          .levels__blocks-level
            background-image url("../img/fifth/level-1.svg")

        &:nth-child(2)
          .levels__blocks-wrapper-inner
            background-image url("../img/fifth/bg-2.svg")

          .levels__blocks-level
            background-image url("../img/fifth/level-2.svg")

        &:nth-child(3)
          .levels__blocks-wrapper-inner
            background-image url("../img/fifth/bg-3.svg")

          .levels__blocks-level
            background-image url("../img/fifth/level-3.svg")

        &:nth-child(4)
          .levels__blocks-wrapper-inner
            background-image url("../img/fifth/bg-4.svg")

          .levels__blocks-level
            background-image url("../img/fifth/level-4.svg")

        &:nth-child(5)
          .levels__blocks-wrapper-inner
            background-image url("../img/fifth/bg-5.svg")

          .levels__blocks-level
            background-image url("../img/fifth/level-5.svg")

        &:nth-child(6)
          .levels__blocks-wrapper-inner
            background-image url("../img/fifth/bg-6.svg")

          .levels__blocks-level
            background-image url("../img/fifth/level-6.svg")

        &:nth-child(7)
          .levels__blocks-wrapper-inner
            background-image url("../img/fifth/bg-7.svg")

          .levels__blocks-level
            background-image url("../img/fifth/level-7.svg")

        &:nth-child(8)
          .levels__blocks-wrapper-inner
            background-image url("../img/fifth/bg-8.svg")

          .levels__blocks-level
            background-position center -3px
            background-image url("../img/fifth/level-8.svg")

  .swiper-scrollbar-drag
    background-color #276259 !important

.levels__blocks-wrapper
  position relative
  max-width 198px
  width 100%
  height 442px
  clip-path polygon(50% 0%, 100% 12.5%, 100% 87.5%, 50% 100%, 0 87.5%, 0 12.5%)
  background-color rgba(58, 255, 216, 0.3)

  &:not(:first-child)
    margin-left 2.3rem

.levels__blocks-wrapper-inner
  position absolute
  top 1px
  left 1px
  padding 4.6rem 2.6rem 6.9rem 2.9rem
  max-width 135px
  width 100%
  height 325px
  clip-path polygon(50% 0%, 100% 12.5%, 100% 87.5%, 50% 100%, 0 87.5%, 0 12.5%)
  background-color #1D2126
  background-size 85%
  background-repeat no-repeat
  background-position center 13px

.levels__blocks-level
  text-align center
  padding 0.7rem 0.5rem 1.35rem 0.4rem
  width 62px
  height 73px
  margin 0 auto 2.25rem
  background-size contain
  background-repeat no-repeat

  span
    display block

    &:first-child
      font-weight 500
      font-size 3rem
      line-height 3.6rem

    &:nth-child(2)
      font-weight 300
      font-size 1.4rem
      line-height 1.7rem

.levels__blocks-price
  font-weight 700
  font-size 3.5rem
  line-height 4.2rem
  text-shadow 0px 2px 2px #0B8C72
  margin-bottom 3rem

.levels__blocks-text
  font-weight 300
  font-size 1.6rem
  line-height 1.9rem
  text-align left
  margin-bottom 4rem
  word-break break-word

.levels__blocks-mobile
  display none

@media (max-width 1024px)
  .levels__blocks-wrapper
    height 362px

  .levels__blocks-wrapper-inner
    height 360px

@media (max-width 768px)
  .levels__blocks
    display none

  .levels__blocks-mobile
    display block

    .levels__message
      font-size 16px
      line-height 1.3

    .swiper
      .swiper-wrapper
        .swiper-slide
          &:nth-child(1)
            .levels__blocks-wrapper-inner
              .levels__blocks-level
                background-image url("../img/fifth/level-1.svg")

          &:nth-child(2)
            .levels__blocks-wrapper-inner
              background-image url("../img/fifth/bg-2.svg")

              .levels__blocks-level
                background-image url("../img/fifth/level-2.svg")

          &:nth-child(3)
            .levels__blocks-wrapper-inner
              background-image url("../img/fifth/bg-3.svg")

            .levels__blocks-level
              background-image url("../img/fifth/level-3.svg")

          &:nth-child(4)
            .levels__blocks-wrapper-inner
              background-image url("../img/fifth/bg-4.svg")

            .levels__blocks-level
              background-image url("../img/fifth/level-4.svg")

          &:nth-child(5)
            .levels__blocks-wrapper-inner
              background-image url("../img/fifth/bg-5.svg")

            .levels__blocks-level
              background-image url("../img/fifth/level-5.svg")
              width 72px
              height 83px

    .levels__blocks-wrapper
      position relative
      max-width 100%
      width 100%
      height 442px
      clip-path polygon(50% 0%, 100% 12.5%, 100% 87.5%, 50% 100%, 0 87.5%, 0 12.5%)
      background-color rgba(58, 255, 216, 0.3)

    .levels__blocks-wrapper-inner
      position absolute
      top 1px
      left 1px
      padding 4.6rem 2.6rem 6.9rem 2.9rem
      max-width calc(100% - 37px)
      width 100%
      height 366px
      clip-path polygon(50% 0%, 100% 12.5%, 100% 87.5%, 50% 100%, 0 87.5%, 0 12.5%)
      background-color #1D2126
      background-size 90%
      background-repeat no-repeat
      background-position center 13px

    .levels__blocks-level
      display flex
      align-items center
      justify-content center
      flex-direction column
      background-size contain
      background-repeat no-repeat
      margin-bottom 30px

      span
        &:nth-child(1)
          font-size 24px

        &:nth-child(2)
          font-size 14px
          margin-top 4px

    .levels__blocks-price
      font-size 40px

    .levels__blocks-text
      font-size 16px
      line-height 1.3

    .button
      font-size 16px
      padding 15px 30px

    .swiper-button-next,
    .swiper-button-prev
      width 60px
      height 60px

      &::after
        content ""
        background-repeat no-repeat
        background-position center
        background-size contain
        width 40px
        height 40px

    .swiper-button-prev
      &::after
        background-image url("../img/fifth/slider-left.svg")

    .swiper-button-next
      &::after
        background-image url("../img/fifth/slider-right.svg")