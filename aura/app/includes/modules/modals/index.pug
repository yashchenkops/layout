mixin modal-connect(data)
  //- -
  //-   const title = data.title || "";
 
  #modal-connect(aria-hidden='true')
    div(tabindex='-1' data-micromodal-close='')
      div(role='dialog' aria-modal='true' aria-labelledby='modal-1-title')
        h2#modal-connect-title Connect wallet
        button(aria-label='Close modal' data-micromodal-close='')
        button#modal-connect-button
          .img
            img(src="img/icons/metamask-fox.svg", alt="Metamask Fox")
          .info
            .info__title Metamask
            .info__message Desktop/ DApp in app
          
        p#modal-connect-content
          | Got questions? <a href="/#faq">Go to FAQ</a>
