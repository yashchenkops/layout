.team__members
  display flex
  align-items flex-start
  justify-content space-between
  gap 4rem

.team__members-wrapper
  position relative
  max-width 275px
  width 100%
  background-image url("../img/tenth/team-lines.svg")
  background-repeat no-repeat
  background-position center top
  background-size auto
  padding-top 25px
  
  &:not(:first-child)
    margin-left 4rem

.team__members-image
  display flex
  align-items center
  justify-content space-between
  width 100%
  max-width 200px
  height 222px
  margin 0 auto 5rem
  background rgba(135, 217, 206, 0.05)
  clip-path polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%)

.team__members-image img
  max-width 200px
  width 100%
  height 100%
  object-fit cover

.team__members-name
  font-weight 400
  font-size 2.3rem
  line-height 3rem
  margin-bottom 1rem

.team__members-position
  font-weight 300
  font-size 1.4rem
  line-height 1.9rem

@media(max-width: 1024px)
  .main
    .team
      &::before
        bottom -510px

@media(max-width: 768px)
  .team__members
    flex-direction column
    align-items center

  .team__members-name
    font-size 16px
    line-height 1.3

  .team__members-position
    font-size 12px
    line-height 1.3