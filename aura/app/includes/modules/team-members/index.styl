.team__members
  display flex
  align-items flex-start
  flex-wrap wrap
  gap 4rem

.team__members-wrapper
  position relative
  width 20.8%

  &:nth-child(n+5)
    display none

  &.is-visible
    display block

.team__members-image
  position relative
  width 158px
  height 182px
  margin 0 auto 5rem
  background-color #2A907D
  clip-path polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0 75%, 0 25%)
  margin-bottom 20px

.members-image-wrapper
  position absolute
  clip-path polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0 75%, 0 25%)
  top 1px
  left 1px
  width 156px
  height 180px
  background-color #1B2123
  z-index -1

.team__members-image img
  position absolute
  max-width 200px
  top 8px
  left 8px
  width 90%
  height 90%
  clip-path polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0 75%, 0 25%)
  object-fit cover

.team__members-name
  font-weight 400
  font-size 2rem
  line-height 3rem
  margin-bottom 1.2rem

.team__members-position,
.team__members-email
  font-weight 300
  font-size 16px
  line-height 19px
  text-align center
  color rgba(255, 255, 255, 0.6)

.team__members-button
  margin-top 80px

@media (max-width 1024px)
  .main
    .team
      &::before
        bottom -510px

@media (max-width 768px)
  .team__members-name
    font-size 16px
    line-height 1.3

  .team__members-position
    font-size 12px
    line-height 1.3

  .team__members
    justify-content center

  .team__members-wrapper
    width 25%

@media (max-width 650px)
  .team__members-wrapper
    width 40%

@media (max-width 650px)
  .team__members-wrapper
    width 100%