.benefits__blocks
  display flex
  align-items flex-start
  justify-content space-between

.benefits__blocks-wrapper
  width 22%

.benefits__blocks-wrapper img
  max-width 100px
  width 100%
  margin-bottom 1rem

.benefits__blocks-title
  font-weight 400
  font-size 2rem
  line-height 2.4rem
  margin-bottom 1.2rem

.benefits__blocks-text
  font-weight 300
  font-size 1.6rem
  line-height 1.9rem
  margin-bottom 4.5rem
  text-align left

.benefits__blocks-wrapper a
  font-weight 300
  font-size 1.6rem
  line-height 1.9rem


// MEDIA
@media(max-width: 768px)
  .benefits__blocks-title
    font-size 16px
    line-height 1.3

  .benefits__blocks-text
    font-size 12px
    line-height 1.3

@media(max-width: 650px)
  .benefits__blocks
    flex-direction column

  .benefits__blocks-wrapper
    display flex
    align-items flex-start
    width 100%
    margin 0 auto 60px

    &:not(:first-child)
      margin 0 auto 60px

  .benefits__blocks-img
    margin-right 30px

    img
      width 84px
      height 85px

  .benefits__blocks-info
    text-align left