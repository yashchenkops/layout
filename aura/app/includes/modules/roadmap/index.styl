.roadmap__inner
  .roadmap__main
    position relative
    padding 100px 50px
    overflow hidden

    &::before,
    &::after
      position absolute
      left 0
      content ""
      width 100%
      height 200px
      z-index 1

    &::before
      top -30px
      background linear-gradient(180deg, #1E1E22 13.68%, rgba(30, 30, 34, 0) 100%)

    &::after
      bottom -30px
      background linear-gradient(0deg, #1E1E22 17.26%, rgba(30, 30, 34, 0) 81.76%)

.roadmap__wrapper
  position relative
  display flex
  align-items flex-start
  justify-content space-between
  gap 66px
  margin-bottom 100px

  &:first-child
    &::after
      position absolute
      content ""
      width 2px
      background-color #1C4744
      top 79px
      right -50px
      height 100%

    .roadmap__double
      &:first-child
        .roadmap__item
          &:first-child
            position relative

            &::before,
            &::after
              position absolute
              content ""
              width 2px
              background-color #1C4744

            &::before
              top -123px
              left -50px
              height 100px

            &::after
              top -59px
              left -36px
              height 100px
              transform rotate(-45deg)

      &:nth-child(2)
        .roadmap__item
          &:nth-child(2)
            position relative

            &::after
              position absolute
              content ""
              width 2px
              background-color #1C4744
              top 15px
              right -36px
              height 100px
              transform rotate(-45deg)

  &:nth-child(2)
    &::after
      position absolute
      content ""
      width 2px
      background-color #1C4744
      top 83px
      left -50px
      height 100%

    .roadmap__double
      &:first-child
        .roadmap__item
          &:first-child
            position relative

            &::after
              position absolute
              content ""
              width 2px
              background-color #1C4744
              top -55px
              right -35px
              height 100px
              transform rotate(45deg)

      &:nth-child(2)
        .roadmap__item
          &:nth-child(2)
            position relative

            &::after
              position absolute
              content ""
              width 2px
              background-color #1C4744
              top 19px
              left -36px
              height 100px
              transform rotate(45deg)

  &:last-child
    margin-bottom 0

    &::after
      position absolute
      content ""
      width 2px
      background-color #1C4744
      top 79px
      right -50px
      height 120%

    .roadmap__double
      &:first-child
        .roadmap__item
          &:first-child
            position relative

            &::after
              position absolute
              content ""
              width 2px
              background-color #1C4744
              top -54px
              left -36px
              height 100px
              transform rotate(-45deg)

      &:nth-child(2)
        .roadmap__item
          &:nth-child(2)
            position relative

            &::after
              position absolute
              content ""
              width 2px
              background-color #1C4744
              top 15px
              right -36px
              height 100px
              transform rotate(-45deg)

  &--reversed
    flex-direction row-reverse

    .roadmap__double
      flex-direction row-reverse

  &::before
    position absolute
    content ""
    top 29px
    left 0
    width 100%
    height 2px
    background-color #1C4744

.roadmap__double
  display flex
  align-items flex-start
  justify-content space-between
  flex-direction row
  gap 66px
  max-width 417px
  width 100%

.roadmap__item
  max-width 190px

  &-number
    position relative
    font-weight 400
    font-size 30px
    line-height 36px
    color #84E0BF
    width 53px
    height 58px
    clip-path polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0 75%, 0 25%)
    background-color #1C4542
    margin-bottom 10px

    & > span
      position absolute
      display flex
      align-items center
      justify-content center
      clip-path polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0 75%, 0 25%)
      background-color #1D2123
      width 51px
      height 56px
      top 1px
      left 1px

  .item-number--shadow
    background radial-gradient(100% 150% at 50% 50%, #177966 0%, rgba(14, 55, 47, 1) 51.56%, rgba(11, 39, 34, 1) 100%)

    & > span
      width 41px
      height 46px
      background #1E1E22
      top 6px
      left 6px

  &-info
    width 100%

  &-date
    display block
    font-weight 300
    font-size 16px
    line-height 20px
    color #84E0BF
    margin-bottom 20px

  &-title
    font-weight 400
    font-size 20px
    line-height 20px
    color $white
    margin-bottom 10px

  &-message
    font-weight 300
    font-size 16px
    line-height 20px
    color rgba(255, 255, 255, 0.5)

