            height 108.5%
            z-index -1

          .roadmap__item
            &:first-child
              &::before,
              &::after
                content none

            &:last-child
              &::before,
              &::after
                position absolute
                content ""
                width 2px
                background-color #1C4744
                height 70px
                transform rotate(45deg)

              &::before
                bottom -108px
                left 50px

              &::after
                top auto
                left auto
                bottom -59px
                right 50px

    &:last-child
      &::after
        content none

      .roadmap__double
        &:first-child
          position relative

          &::after
            position absolute
            content ""
            width 2px
            background-color #1C4744
            bottom 0
            left 25px
            height 108.5%
            z-index -1

          .roadmap__item
            &:first-child
              &::before,
              &::after
                content none

            &:last-child
              &::before,
              &::after
                position absolute
                content ""
                width 2px
                background-color #1C4744
                height 70px
                transform rotate(-45deg)

              &::before
                bottom -59px
                left 49px

              &::after
                bottom -108px
                right 50px

        &:last-child
          position relative

          &::after
            position absolute
            content ""
            width 2px
            background-color #1C4744
            top -32px
            right 25px
            height 130%
            z-index -1

          &::before
            content none

          .roadmap__item
            &:first-child
              &::before,
              &::after
                content none

            &:last-child
              &::before,
              &::after
                content none

  .roadmap__double
    position relative
    gap 46px
    flex-direction column
    margin-bottom 130px
    align-items center
    max-width 300px

    &::before
      position absolute
      content ""
      bottom -50px
      left 0
      background-color #1C4744
      right 75px
      left 75px
      height 2px
      z-index -1

  .roadmap__item
    display flex
    align-items flex-start
    justify-content space-between
    max-width 300px
    gap 30px

    &-number
      width 73px
      margin-bottom 0

    &--reversed
      flex-direction row-reverse

