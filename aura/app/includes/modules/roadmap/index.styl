  .roadmap__inner
    .roadmap__main
      padding 100px 0

      &::before
        top -10px

      &::after
        bottom 110px

  .roadmap__wrapper
    gap 0
    flex-direction column
    margin-bottom 0
    align-items center
    max-width 300px
    margin 0 auto

    &--reversed
      flex-direction column

      .roadmap__double
        flex-direction column

    &::before
      content none

    &:first-child
      &::after
        content none

      .roadmap__double
        &:first-child
