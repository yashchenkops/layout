.roadmap__blocks-wrapper
  position relative
  max-width 519px
  display flex
  align-items center
  justify-content space-between
  padding 0.7rem 1.1rem 1rem 9rem

  &::before,
  &::after
    position absolute
    top 50%
    transform translateY(-50%)
    content ""
    width 100%
    max-width 64px
    height 147px
    background-repeat no-repeat
    background-position center
    background-size cover
    z-index -1

  &::before
    left 0
    background-image url("../img/eighth/roadmap-left.svg")

  &::after
    right 0
    background-image url("../img/eighth/roadmap-right.svg")

.roadmap--left
  margin-right auto

.roadmap--right
  margin-left auto

.roadmap__blocks-left 
  max-width 250px

.roadmap__blocks-title
  text-align center
  font-weight 400
  font-size 2.5rem
  line-height 3rem
  margin-bottom 1rem

.roadmap__blocks-text
  font-weight 300
  font-size 1.4rem
  line-height 1.3

.roadmap__blocks-number
  display flex
  align-items center
  justify-content center
  width 130px
  height 130px
  background-image url("../img/eighth/number-bg.svg")
  background-repeat no-repeat
  background-size contain
  background-position center

.roadmap__blocks-number span
  font-weight 400
  font-size 2.5rem
  line-height 3rem
  color #84E0BF