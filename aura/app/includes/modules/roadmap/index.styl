  .roadmap__item
    gap 10px

    &-number
      width 67px

  .roadmap__wrapper:first-child .roadmap__double:last-child::after,
  .roadmap__wrapper:nth-child(2) .roadmap__double:first-child::after,
  .roadmap__wrapper:nth-child(2) .roadmap__double:last-child::after,
  .roadmap__wrapper:last-child .roadmap__double:first-child::after
    height 109.3%