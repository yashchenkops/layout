.roadmap__inner
  .swiper-slide
    padding 100px 50px
    flex-shrink 1

.roadmap__wrapper
  position relative
  display flex
  align-items flex-start
  justify-content space-between
  gap 66px
  margin-bottom 100px

  &:first-child
    &::after
      position absolute
      content ""
      width 2px
      background-color #1C4744
      top 79px
      right -50px
      height 100%

    .roadmap__double
      &:first-child
        .roadmap__item
          &:first-child
            position relative

            &::before,
            &::after
              position absolute
              content ""
              width 2px
              background-color #1C4744

            &::before
              top -123px
              left -50px
              height 100px

            &::after
              top -59px
              left -36px
              height 100px
              transform rotate(-45deg)

      &:nth-child(2)
        .roadmap__item
          &:nth-child(2)
            position relative

            &::after
              position absolute
              content ""
              width 2px
              background-color #1C4744
              top 15px
              right -36px
              height 100px
              transform rotate(-45deg)

  &:nth-child(2)
    &::after
      position absolute
      content ""
      width 2px
      background-color #1C4744
      top 83px
      left -50px
      height 100%

    .roadmap__double
      &:first-child
        .roadmap__item
          &:first-child
            position relative

            &::after
              position absolute
              content ""
              width 2px
              background-color #1C4744
              top -55px
              right -35px
              height 100px
              transform rotate(45deg)

      &:nth-child(2)
        .roadmap__item
          &:nth-child(2)
            position relative

            &::after
              position absolute
              content ""
              width 2px
              background-color #1C4744
              top 19px
              left -36px
              height 100px
              transform rotate(45deg)

  &:last-child
    margin-bottom 0

    &::after
      position absolute
      content ""
      width 2px
      background-color #1C4744
      top 79px
      right -50px
      height 120%

    .roadmap__double
      &:first-child
        .roadmap__item
          &:first-child
            position relative

            &::after
              position absolute
              content ""
              width 2px
              background-color #1C4744
              top -54px
              left -36px
              height 100px
              transform rotate(-45deg)

      &:nth-child(2)
        .roadmap__item
          &:nth-child(2)
            position relative

            &::after
              position absolute
              content ""
              width 2px
              background-color #1C4744
              top 15px
              right -36px
              height 100px
              transform rotate(-45deg)

  &--reversed
    flex-direction row-reverse

    .roadmap__double
      flex-direction row-reverse

  &::before
    position absolute
    content ""
    top 29px
    left 0
    width 100%
    height 2px
    background-color #1C4744

.roadmap__double
  display flex
  align-items flex-start
  justify-content space-between
  gap 66px
  max-width 417px
  width 100%

.roadmap__item
  max-width 190px

  &-number
    position relative
    font-weight 400
    font-size 30px
    line-height 36px
    color #84E0BF
    width 53px
    height 58px
    clip-path polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0 75%, 0 25%)
    background-color #1C4542
    margin-bottom 10px

    & > span
      position absolute
      display flex
      align-items center
      justify-content center
      clip-path polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0 75%, 0 25%)
      background-color #1D2123
      width 51px
      height 56px
      top 1px
      left 1px

  .item-number--shadow
    background radial-gradient(100% 150% at 50% 50%, #177966 0%, rgba(14, 55, 47, 1) 51.56%, rgba(11, 39, 34, 1) 100%)

    & > span
      width 41px
      height 46px
      background #1E1E22
      top 6px
      left 6px

  &-date
    display block
    font-weight 300
    font-size 16px
    line-height 20px
    color #84E0BF
    margin-bottom 20px

  &-title
    font-weight 400
    font-size 20px
    line-height 20px
    color $white
    margin-bottom 10px

  &-message
    font-weight 300
    font-size 16px
    line-height 20px
    color rgba(255, 255, 255, 0.5)

@media (max-width 768px)
  .roadmap__wrapper
    gap 0
    flex-direction column
    margin-bottom 0

    &--reversed
      flex-direction column

      .roadmap__double
        flex-direction column

  .roadmap__double
    gap 46px
    flex-direction column
    margin-bottom 130px

  .roadmap__item
    display flex
    align-items flex-start
    justify-content space-between
    max-width 300px
    gap 30px

    &-number
      width 200px
      margin-bottom 0

    &--reversed
      flex-direction row-reverse

@media (max-width 425px)
  .roadmap__item
    gap 10px

    &-number
      width 191px