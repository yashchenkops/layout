.intro__bottom-slider
  max-width 660px
  width 100%

  .swiper
    .swiper-scrollbar-drag
      background-color #276259 !important

    .swiper-slide
      display block
      width 140px

.carousel-cabinet-blocks
  display flex
  align-items flex-start

.cabinet__blocks-wrapper
  position relative
  width 110px
  height 262px
  padding 3.4rem 1.7rem 3.4rem 1.6rem
  clip-path polygon(50% 0%, 100% 12.5%, 100% 87.5%, 50% 100%, 0 87.5%, 0 12.5%)
  background-color rgba(58, 255, 216, 0.3)

.cabinet__blocks-wrapper-inner
  position absolute
  display flex
  align-items center
  flex-direction column
  justify-content space-between
  top 1px
  left 1px
  padding 3.4rem 1.7rem 3.4rem 1.6rem
  width 108px
  height 260px
  clip-path polygon(50% 0%, 100% 12.5%, 100% 87.5%, 50% 100%, 0 87.5%, 0 12.5%)
  background-color #1D2126
  background-size 85%
  background-repeat no-repeat
  background-position center 13px

.cabinet__blocks-text
  & span
    display block
    text-align center

    &:first-child
      font-weight 700
      font-size 16px
      line-height 19px
      letter-spacing 0.035em
      margin-bottom 10px

    &:nth-child(2)
      font-weight 300
      font-size 12px
      line-height 14px
      letter-spacing 0.035em

.cabinet__blocks-percentage
  & span
    font-weight 300
    font-size 14px
    line-height 17px
    letter-spacing 0.035em

.swiper-wrapper
  margin-bottom 20px !important