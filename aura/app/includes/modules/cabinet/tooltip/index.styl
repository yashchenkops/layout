.tooltip
  position absolute
  top -10px
  right 10px

  &__inner
    position relative

  &__icon
    width 20px
    height 20px

    img
      width 100%

  .tooltiptext
    text-align left
    visibility hidden
    width 120px
    background-color #555
    color #fff
    border-radius 6px
    padding 5px
    position absolute
    z-index 8
    bottom 125%
    left 50%
    margin-left -60px
    opacity 0
    transition opacity 0.3s
    font-size 10px
    line-height 1.3

    &::after
      content ""
      position absolute
      top 100%
      left 50%
      margin-left -5px
      border-width 5px
      border-style solid
      border-color #555 transparent transparent transparent

  &:hover .tooltiptext
    visibility visible
    opacity 1