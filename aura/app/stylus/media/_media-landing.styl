@media (max-width 1024px)
  .intro__inner
    padding-top 15rem
    padding-bottom 10rem

  .intro__illustration
    width 50%
    margin-right 0

  .pass
    &::before
      top 100%

  .how-it-works__main
    max-width 710px
    margin 0 auto 100px

    .how-it-works__arrows
      #gray-arrow
        top -38px
        left 50px
        width 260px
        height 80px

        #percent1
          max-width 20%
          top 5px

      #green-arrow
        top -20px
        left 210px
        width 265px
        height 70px

        #percent2
          max-width 20%

      #yellow-arrow1
        bottom 4px
        left 187px
        width 205px
        height 30px

        #percent3
          max-width 25%

      #yellow-arrow2
        bottom -15px
        right 58px
        width 330px
        height 60px

        #percent4
          max-width 16%
          bottom -20px

    .number__bank
      width 100px
      height 140px

    .number__single
      width 57px
      height 66px

      &::before
        max-width 68px
        height 68px

    .number__double
      max-width 155px

      .number__single
        width 57px
        height 66px

  .about
    padding-top 60%
    padding-bottom 5rem

  .about__info
    margin 0 auto

  .about__img
    top -23%

  .roadmap
    padding-top 15rem

@media (max-width 768px)
  .intro
    margin-bottom 30px

  .intro__inner
    padding-top 15rem
    padding-bottom 5rem

  .intro__illustration
    min-width 320px
    background-position 56px 57%
    background-size 210px

    &-inner
      width 250px

  .results
    margin-bottom 0

  .results__inner
    background-size contain

  .pass
    margin-bottom 110px

    &::before
      top 250%

  .pass__message
    font-size 14px
    line-height 1.3

  .how-it-works__main
    position relative
    flex-direction column
    max-width 320px
    margin 0 auto

    .how-it-works__arrows
      #gray-arrow
        top 200px
        left 22%
        width 380px
        height 120px
        transform rotate(90deg)

        #percent1
          position relative
          top -10px
          transform rotate(-90deg)

      #green-arrow
        top 415px
        left 10%
        width 425px
        height 110px
        transform rotate(90deg)

        #percent2
          position relative
          top -10px
          transform rotate(-90deg)

      #yellow-arrow1
        top 355px
        right 35%
        left auto
        width 235px
        height 60px
        transform rotate(90deg)

        #percent3
          position absolute
          bottom -45px
          transform rotate(-90deg)
          max-width 35%

      #yellow-arrow2
        bottom 337px
        right -5%
        width 520px
        height 80px
        transform rotate(90deg)

        #percent4
          position absolute
          bottom -50px
          transform rotate(-90deg)

    .number__bank
      width 150px
      height 190px
      transform rotate(32deg)
      margin-bottom 30px

      span
        transform rotate(-32deg)
        font-size 4rem

    .number__single
      margin-bottom 35px
      width 77px
      height 86px
      margin-bottom 65px

      &::before
        max-width 89px
        height 98px

      span
        font-size 4rem

        &::before
          transform rotate(90deg)
          top -24px
          left 30px

        &::after
          transform rotate(90deg)
          bottom -27px
          left 30px
          top auto
          right auto

    .number__double
      flex-direction column

      &::before
        background-image url("../img/fourth/double-green-mobile.svg")
        height 209px
        top 0
        left 40px

      &::after
        background-image url("../img/fourth/double-lines-mobile.svg")
        height 212px
        top 0
        left 40px

      .number__single
        width 77px
        height 86px

        &:not(:last-child)
          margin-bottom 35px

  .how-it-works__message
    font-size 14px
    line-height 1.4
    margin 0 auto

  .about__img
    top -35%

@media (max-width 650px)
  .intro
    margin-bottom 100px

  .intro__illustration
    justify-content center
    min-width 100%
    background-position center -8px
    background-size 268px

    &-inner
      transform none

  .intro__inner
    flex-direction column

    &::before,
    &::after
      content none

  .intro__info
    width 100%
    order 2

  .intro__illustration
    width 100%
    order 1
    padding-bottom 30px

    &::after
      content none

  .results
    margin-bottom 40px

  .results__inner
    background-image url("../img/second/polygon-center-mobile.svg")
    padding 30px 27px 17px

  .results__container
    max-width 256px
    margin 0 auto
    background-image url("../img/second/results-container.svg")
    background-position center
    background-size contain
    background-repeat no-repeat
    padding 0 39px 31px 39px
    clip-path none

  .results__wrapper
    flex-direction column

  .results__block
    &:not(:first-child)
      margin-left 0
      margin-top 30px

  .pass__inner
    flex-direction column

  .pass__info
    margin-right 0
    width 100%
    margin-bottom 60px

  .pass__img
    width 100%

    picture
      width 79%

  .how-it-works__main
    transform none

  .benefits__blocks
    &-wrapper
      margin-bottom 0

      &:not(:first-child)
        margin-bottom 0

      &:last-child
        margin-bottom 50px

  .about__inner
    &::before
      bottom -120px
      max-width 25px
      height 100px

@media (max-width 425px)
  .intro__illustration
    width 100%
    height 350px
    background-position center
    background-size 70%

    &-inner
      width 220px

  .how-it-works__main
    max-width 220px

    .how-it-works__arrows
      #gray-arrow
        left 22px

        #percent1
          top 60px

      #green-arrow
        left -8%
        top 420px

        #percent2
          top -5px

      #yellow-arrow1
        right 28%

      #yellow-arrow2
        right -30%

        #percent4
          top -54px
