@media (max-width 1024px)
  .intro__bottom
    &-slider
      max-width 590px

@media (max-width 915px)
  .intro__bottom
    flex-direction column
    align-items center

    .mint-title
      text-align center

    .mint-blocks
      justify-content center
      margin-bottom 50px

    &-slider
      max-width 100%

@media (max-width 768px)
  .intro__inner
    padding-top 200px
    padding-bottom 120px

  .intro__middle
    &-wallet
      &-title
        font-size 16px

      &-main
        .wallet-inner
          padding 13px 8px 9px 8px

    &-invite
      &-title
        font-size 16px

      &-main
        .invite-inner
          padding 13px 8px 9px 8px

        .invite-icon
          padding 8px 6px 5px 6px

    &-qualification
      &-title
        font-size 16px

@media (max-width 650px)
  .intro__inner
    padding-top 150px

  .intro__top
    flex-direction column
    align-items center

    &-image
      margin-bottom 50px

    &-revard
      margin-bottom 50px

  .intro__middle
    flex-direction column
    align-items center

    &-wallet
      margin-bottom 30px

    &-invite
      margin-bottom 30px