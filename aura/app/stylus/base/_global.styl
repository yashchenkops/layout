@import "base/_vars"
@import "../includes/header/index.styl"
@import "../includes/footer/index.styl"
@import "../includes/modules/button/index.styl"
@import "../includes/modules/pictures/index.styl"

@import url('https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,300;0,400;0,700;1,400&display=swap')

$font = 'Lato', sans-serif

html
  height 100%
  box-sizing border-box
  font-size 62.5% // 1rem =10px; 10px/16px = 62.5%

  @media (max-width 1024px)
    font-size 50% // 1rem =8px; 8px/16px = 50%

  @media (max-width 768px)
    font-size 40% // 1rem = 6.4; 6.4px/16px = 40%
*,
*::before,
*::after
  box-sizing inherit
  padding 0
  margin 0

body
  display flex
  flex-direction column
  height 100%
  font-family $font
  font-weight 400
  background-color $bg
  color $white
  overflow-x hidden

main
  flex 1 0 auto

a
  display inline-block
  text-decoration none
  color $link
  outline none

  &:focus-visible
    outline solid
  
p,
span,
ul,
ol,
li,
input,
textarea
  font-family $font
  color $text

ul,
li,
ol
  list-style none
  padding 0
  margin 0

h1,
h2,
h3,
h4
  font-family $font
  font-weight 500
  margin 0
  padding 0
  color $title

h1
  font-size 5rem
  line-height 6rem
  font-weight 700

h2
  font-size 4rem
  line-height 4.8rem

h3
  font-size 2rem

h4
  font-size 1.6rem

button
  border none
  outline none
  cursor pointer
  background-color transparent
  color $white

  &:focus-visible
    outline solid

.scroll-block
  overflow hidden

.link-underline
  position relative
  
  &::after
    position absolute
    content ""
    bottom 2px
    right 0
    height 2px
    width 0
    background-color $white
    transition width .3s

  &:hover
    &::after
      width 100%
      left 0

.section-title
  position relative
  font-size 4rem
  line-height 4.8rem
  text-shadow 0px 2px 2px #0B8C72

  &::after
    position absolute
    left 0
    bottom -9px
    content ""
    width 100%
    height 8px
    background radial-gradient(50% 50% at 50% 50%, #085441 0%, #1D2023 77.51%)
