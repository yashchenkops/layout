@import "base/_vars"
@import "base/_global"
@import "../includes/modules/header/index.styl"
@import "../includes/modules/button/index.styl"
@import "../includes/modules/pictures/index.styl"

.intro
  position relative

  &::before
    position absolute
    content ""
    top 0
    left 0
    width 100%
    height 100%
    background-image url("../img/first/main-bg.webp")
    background-repeat no-repeat
    background-position center
    background-size cover
    z-index -1
    opacity .4

.intro__inner
  position relative
  display flex
  align-items center
  justify-content space-between
  max-width 1075px
  padding 10.5rem 15px 0
  margin 0 auto

  &::before
    position absolute
    content ""
    top -50px
    left -21%
    width 100%
    max-width 650px
    height 100%
    background-image url("../img/first/elements-left.svg")
    background-repeat no-repeat
    background-position left
    background-size contain
    z-index -1
    opacity .4

  &::after
    position absolute
    content ""
    bottom -30px
    left 50%
    width 22px
    height 110px
    transform translate(-50%, 0)
    background-image url("../img/first/scroll.svg")
    background-repeat no-repeat
    background-position center
    background-size contain
    opacity .5

.intro__info
  max-width 526px
  width 100%

.intro__title
  margin-bottom 5px

.intro__message
  font-weight 300
  font-size 2.4rem
  line-height 2.9rem

.intro__illustration
  position relative
  margin-right -120px

  #canvas
    position absolute
    top -19.5%
    max-width 650px
    max-height 680px
    height 100%
    opacity .5

  &::before
    position absolute
    content ""
    top 0
    left 10%
    width 100%
    max-width 562px
    height 100%
    background-image url("../img/first/elements-right.svg")
    background-repeat no-repeat
    background-position -3px 40%
    background-size contain
    z-index -1
    opacity .5

  img
    max-width 658px
    width 100%

.results
  position relative
  overflow-x hidden
  padding-top 220px
  margin-top -50px

  &::before
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    content ""
    width 100%
    max-width 888px
    height 280px
    background-image url("../img/second/polygon-center.svg")
    background-repeat no-repeat
    background-size contain

.results__inner
  position relative
  max-width 888px
  margin 0 auto 220px
  padding 0 27px

  &::before,
  &::after
    position absolute
    top -17px
    content ""
    width 100%
    max-width 240px
    height 280px
    background-repeat no-repeat
    background-size contain
    z-index -1

  &::before
    left -30.5%
    background-image url("../img/second/polygon-left.svg")

  &::after
    right -30.9%
    background-image url("../img/second/polygon-right.svg")
  
.results__container
  padding 12px 47px 35px
  text-align center
  background linear-gradient(2.29deg, rgba(0, 200, 160, 0.2) 6.98%, rgba(70, 181, 152, 0.0860465) 53.32%, rgba(33, 67, 60, 0) 97.76%)
  clip-path polygon(9% 0,90% 0,100% 22%,100% 77%,90% 100%,9% 100%,0 80%,0 20%)

.results__title
  font-weight 300
  font-size 3rem
  line-height 3.6rem
  opacity .8
  margin-bottom 2.6rem

.results__wrapper
  display flex
  align-items center
  justify-content space-between

.results__block
  padding 2.2rem 1.7rem 3.1rem
  clip-path polygon(20% 0,80% 0,100% 20%,100% 80%,80% 100%,20% 100%,0 80%,0 20%)
  background linear-gradient(0.77deg, rgba(0, 200, 160, 0.7) 1.41%, rgba(70, 181, 152, 0.301163) 51.39%, rgba(35, 57, 53, 0.231) 99.33%)
  max-width 218px
  width 100%

  &:not(:first-child)
    margin-left 4.3rem

  &-title
    font-size 2rem
    line-height 2.4rem
    font-weight 300
    margin-bottom 4px
    color #91B6AE

  &-numbers
    font-weight 700
    font-size 4.5rem
    line-height 5.4rem
    text-shadow 0px 2px 4px rgba(42, 249, 174, 0.69)

.pass
  position relative
  margin-bottom 150px

  &::before,
  &::after
    position absolute
    content ""
    width 100%
    background-repeat no-repeat
    background-size contain
    z-index -1

  &::before
    top 50%
    right 0
    transform translate(0, -50%)
    max-width 1388px
    height 3018px
    background-image url("../img/third/green-light.png")

  &::after
    bottom -50px
    left 50%
    transform translate(-50%, 0)
    max-width 178px
    height 5px
    background-image url("../img/third/dots.svg")


.pass__inner
  display flex
  align-items center
  justify-content space-between
  max-width 1095px
  padding 0 15px
  margin 0 auto

.pass__info
  position relative
  max-width 500px
  text-align center
  margin-right 77px

  &::before
    position absolute
    top -100px
    left -80px
    content ""
    width 100%
    max-width 569px
    height 644px
    background-image url("../img/third/polygon-left.svg")
    background-repeat no-repeat
    background-size contain
    z-index -1

.pass__title
  max-width 266px
  margin 0 auto 20px

.pass__message
  font-weight 300
  font-size 1.6rem
  line-height 1.9rem
  margin-bottom 32px
  text-align left

.pass__img
  position relative
  margin-right -50px

  &::before
    position absolute
    top -100px
    right -80px
    content ""
    width 100%
    max-width 559px
    height 571px
    background-image url("../img/third/polygon-right.svg")
    background-repeat no-repeat
    background-size contain
    z-index -1

  img
    max-width 100%

.how-it-works
  position relative

  &::before
    position absolute
    top -940px
    left 0
    content ""
    width 100%
    max-width 1089px
    height 3018px
    background-image url("../img/fourth/green-light.png")
    background-repeat no-repeat
    background-position center
    background-size cover
    z-index -1


.how-it-works__inner
  position relative
  max-width 938px
  padding 0 15px
  margin 0 auto

  &::before,
  &::after
    position absolute
    content ""
    width 100%
    background-repeat no-repeat
    background-position center
    background-size cover
    z-index -1

  &::before
    top 100px
    left -170px
    max-width 569px
    height 644px
    background-image url("../img/fourth/lines-left.svg")

  &::after
    top 0
    right -170px
    max-width 609px
    height 715px
    background-image url("../img/fourth/lines-right.svg")

.how-it-works__title
  max-width 234px
  margin 0 auto 60px
  text-align center

.how-it-works__message
  font-weight 300
  font-size 1.6rem
  line-height 2.1rem
  max-width 662px
  margin 0 auto 100px

  &:last-of-type
    margin-bottom 0

.how-it-works__main
  display flex
  align-items center
  justify-content space-between
  margin-bottom 100px

  .number__bank
    display flex
    align-items center
    justify-content center
    font-weight 400
    font-size 3rem
    line-height 3.6rem
    width 150px
    height 190px
    text-shadow 0px 0px 4px #2FE8B0
    background-image url("../img/fourth/bank.svg")
    background-repeat no-repeat
    background-position center
    background-size cover

  .number__single
    position relative
    display flex
    align-items center
    justify-content center
    font-weight 400
    font-size 3.5rem
    line-height 4.2rem
    width 77px
    height 86px
    background-image url("../img/fourth/single.svg")
    background-repeat no-repeat
    background-position center
    background-size cover

    &::before
      position absolute
      top 2px
      left 0
      transform scale(1.2)
      content ""
      width 100%
      max-width 89px
      height 98px
      background-image url("../img/fourth/single-bg.svg")
      background-repeat no-repeat
      background-size contain
      z-index -1

    span
      &::before,
      &::after
        position absolute
        top 50% 
        transform translate(-50%, 0)
        content ""
        width 100%
        max-width 16px
        height 1px
        background-color #1C8970
        z-index -1

      &::before
        left -21px

      &::after
        right -37px

  .first__single
    span
      &::before
        left -31px

  .number__double
    position relative
    display flex
    align-items center
    justify-content space-between
    max-width 195px
    width 100%

    &::before,
    &::after
      position absolute
      left 0
      max-width 209px
      height 102px
      content ""
      width 100%
      background-repeat no-repeat
      background-size contain
      z-index -1

    &::before
      top -4px
      transform scale(1.1)
      background-image url("../img/fourth/double-green.svg")

    &::after
      top -8px
      transform scale(1.2)
      background-image url("../img/fourth/double-lines.svg")

    .number__single
      width 77px
      height 86px

      &::before
        content none

      span
        &::before,
        &::after
          content none