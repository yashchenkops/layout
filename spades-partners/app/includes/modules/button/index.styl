.button
  display inline-block
  font-size 1.6rem
  line-height 2.4rem
  padding 1.6rem 2.2rem
  background-color $red
  box-shadow inset 0px 4px 4px rgba(0, 0, 0, 0.25)
  border-radius 16px
  transition all 0.3s
  color $white
  text-align center

  &:hover,
  &:focus-visible
    box-shadow none

  &:active
    transform scale(0.97)

  &--bordered
    font-weight 700
    border-color transparent
    background-color transparent
    border 2px solid $red
    border-radius 16px
    color $red