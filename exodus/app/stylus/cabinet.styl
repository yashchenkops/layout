@import "base/_global"

.intro
  background radial-gradient(121.48% 131.8% at 84.71% -31.8%, #0057FF 0.09%, rgba(55, 48, 135, 0.8) 38.29%, rgba(31, 22, 53, 0.4) 71.54%, rgba(35, 23, 47, 0) 99.48%, rgba(30, 21, 48, 0) 99.49%)

.intro__inner
  max-width 1030px
  margin 0 auto
  padding 250px 15px 0

  .top
    display flex
    align-items center
    justify-content space-between
    margin-bottom 60px

    .field
      display block
      max-width 450px
      width 100%
      padding-right 32px

      &__title
        font-family $fontBlack
        font-size 20px
        line-height 24px
        margin-bottom 15px
        margin-left 15px

      &__main
        display flex
        align-items center
        width 100%

        &:active
          .field__inner
            background-color rgba(160, 160, 173, 0.3)

        .field__inner
          padding 14px 24px 10px 15px
          background-color rgba(160, 160, 173, 0.2)
          height 100%
          width 100%
          border-top-left-radius 5px
          border-bottom-left-radius 5px

          span
            display block
            font-size 16px
            line-height 19px
            white-space nowrap
            overflow hidden
            text-overflow ellipsis
            text-align left

        .field__icon
          display block
          padding 9px 6px 8px 6px
          height 43px
          background-color $blue
          border-top-right-radius 5px
          border-bottom-right-radius 5px

      &--invite
        .field__icon
          padding 12px 6px 8px 6px

        .field__title
          display flex
          align-items flex-start
          justify-content space-between

          &-text
            font-family $fontBlack
            font-size 20px
            line-height 25px

            span
              color $red
              font-family $fontBlack
              font-size 24px

  .bottom
    display flex
    align-items center
    justify-content space-between
    margin-bottom 80px

    .purchase
      &__inner
        .button
          font-size 16px
          line-height 20px
          padding 10px 17px 10px 18px
          min-width 170px

      &__top
        margin-bottom 20px

        .button--red-filled
          margin-right 24px

      &__bottom
        display flex
        align-items center

        .number
          min-width 170px
          margin-right 24px

          &__top
            display flex
            align-items center
            justify-content space-between
            margin-bottom 10px

            .number__level
              width 18px
              height 18px
              background-color $blue
              border-radius 50%
              transition transform 0.3s

              &:active
                transform scale(0.9)

              &--minus
                background-image url("data:image/svg+xml,%3Csvg width='18' height='18' viewBox='0 0 18 18' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Ccircle cx='9' cy='9' r='8.5' fill='%230033B7' stroke='%230047FF'/%3E%3Cline x1='5' y1='9' x2='13' y2='9' stroke='white' stroke-width='2' stroke-linecap='round'/%3E%3C/svg%3E%0A")

              &--plus
                background-image url("data:image/svg+xml,%3Csvg width='18' height='18' viewBox='0 0 18 18' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Ccircle cx='9' cy='9' r='8.5' fill='%230033B7' stroke='%230047FF'/%3E%3Cline x1='5' y1='9' x2='13' y2='9' stroke='white' stroke-width='2' stroke-linecap='round'/%3E%3Cline x1='9' y1='5' x2='9' y2='13' stroke='white' stroke-width='2' stroke-linecap='round'/%3E%3C/svg%3E%0A")

            .number__value
              font-size 20px
              line-height 25px
              text-align center
              font-family $fontBlack

          &__progress
            width 100%
            height 3px
            background-color #2F3576
            border-radius 3px
            margin-bottom 5px

            span
              display block
              width 10%
              height 100%
              background-color #0442EA
              border-radius 3px

    .invited
      display flex
      justify-content space-between
      max-width 520px
      width 100%
      max-height 130px
      overflow-y auto

      &::-webkit-scrollbar
        width 5px

      &::-webkit-scrollbar-track
        background-color #322C43
        border-radius 5px

      &::-webkit-scrollbar-thumb
        background-color #0047FF
        border-radius 10px

      &__item
        height auto
        padding-right 15px
        max-width 178px
        width 100%

        li
          display block
          font-size 16px
          line-height 19px
          margin-bottom 10px
          white-space nowrap
          overflow hidden
          text-overflow ellipsis
          max-width 140px

          &:last-child
            margin-bottom 0

        .invited__item--first
          font-family $fontBlack
          text-align center
          margin-bottom 17px
          font-size 20px
          line-height 25px

        .invited__item--red
          color $red

.spreadsheet
  margin-bottom 100px

.spreadsheet__inner
  max-width 1030px
  margin 0 auto
  padding 0 15px
  text-align center

.table__wrapper
  padding-bottom 25px
  margin-bottom 25px

.table
  position relative
  width 100%
  border-collapse collapse
  text-align left

  &::after
    position absolute
    content ""
    left -1px
    bottom -20px
    width 101%
    height 200px
    background linear-gradient(0deg, #1c1924 17.26%, rgba(30, 30, 34, 0) 81.76%)

  &.is-active
    &::after
      display none

  .thead
    font-weight 700
    font-size 20px
    line-height 24px
    letter-spacing 0.035em
    color $white

  .tbody
    font-weight 300
    font-size 16px
    line-height 19px
    letter-spacing 0.035em

  .thead__row
    th
      font-weight bold
      padding 46px 20px 41px

      &:first-child
        width 111px

      &:nth-child(2)
        width 370px

      &:nth-child(3)
        width 158px

      &:last-child
        width 113px

  .tbody__row
    &:first-child
      td
        padding-top 0

    td
      position relative
      padding 10px 20px

      &::after
        position absolute
        left 0
        bottom 0
        content ""
        width 100%
        height 1px
        background-color #4B4B4E

      &:first-child
        &::after
          width 92%
          right 0
          left auto

      &:last-child
        &::after
          width 90%

      &:first-child
        width 111px

      &:nth-child(2)
        width 370px

      &:nth-child(3)
        width 158px

      &:last-child
        width 113px

    .amount--green
      color #20EEBC

    .amount--red
      color #F13131

    &:nth-child(n+11)
      display none

.poweredby
  &-inner
    display flex
    align-items center
    justify-content center

  &-text
    font-weight 300
    font-size 20px
    line-height 24px
    margin-right 15px

@import "media/_media-cabinet.styl"