@import "base/_global"
@import "../includes/sections/contact/index.styl"

.intro
  position relative
  background-image url('../img/intro-bg.webp')
  background-repeat no-repeat
  background-position 0
  background-size cover
  min-height 1012px
  margin-bottom -60px

  &__info
    padding-top 300px
    margin-left 150px
    max-width 773px
    color white

  .section-title
    position relative
    font-weight 800
    font-size 36px
    line-height 1.2
    text-transform uppercase
    color white
    font-style italic
    text-shadow 2px 2px 0 rgba(0, 0, 0, 0.5)
    margin-bottom 60px

    &::after
      content ''
      position absolute
      bottom -25px
      left 50%
      transform translateX(-50%)
      border-radius 11px
      width 260px
      height 3px
      box-shadow 2px 2px 0 0 rgba(0, 0, 0, 0.25)
      background #ff592a

  .section-subtitle
    font-weight 400
    font-size 24px
    line-height 1.5
    color #e6e6e6
    margin-bottom 50px

  .button
    margin-left 130px
    margin-bottom 90px

  .intro__scroll
    position absolute
    bottom 150px
    left 50%
    transform translateX(-50%)
    display flex
    align-items center
    flex-direction column

    span
      display inline-block
      font-weight 500
      font-size 13px
      color white
      margin-bottom 10px

.commission
  position relative
  padding-top 70px
  padding-bottom 50px
  overflow hidden
  margin-bottom 100px

  &::after
    content ''
    position absolute
    bottom -340px
    left 0
    background-color #f3f3f3
    width 110%
    height 500px
    z-index -1
    transform rotate(-10deg)

  &__inner 
    position relative
    display block

    &::before
      font-family $fontTitle
      content 'Commission'
      position absolute
      left 50%
      top -95px
      transform translate(-50%)
      font-weight 700
      font-size 200px
      text-align center
      color #f3f3f3
      z-index 0

  .section-title
    margin-bottom 15px

  .section-subtitle
    position relative
    font-weight 400
    font-size 22px
    text-align center
    color #4f4f4f
    margin-bottom 50px
    z-index 1

  .section-cards
    display flex
    align-items center
    justify-content center
    flex-wrap wrap
    gap 30px 16px
    max-width 1000px
    margin 0 auto 80px

  .section-card
    position relative
    width 320px

    &::after
      content ''
      position absolute
      width 40px
      height 40px
      top calc(50% + 10px)
      transform translateY(-50%)
      right -28px
      background url("data:image/svg+xml;base64,") no-repeat
      background-size cover
      z-index 1

    &:nth-child(3),
    &:last-child
      &::after
        display none

    img
      max-width 100%

  .section-button
    text-align center

.why-us
  position relative
  overflow hidden
  padding-bottom 180px

  &::after
    content ''
    position absolute
    bottom 0
    left 0
    background url("data:image/svg+xml;base64,") no-repeat
    background-size cover
    width 100%
    height 510px
    z-index -1

  .section-title
    margin-bottom 15px

    span
      &::before
        left -60%

      &::after
        right -155%

  .section-subtitle
    font-size 22px
    line-height 1.5
    text-align center
    color #4f4f4f
    max-width 1100px
    margin 0 auto 20px

  .section-cards
    display flex
    align-items center
    justify-content space-between
    gap 69px
    margin-bottom 90px

    img
      max-width 100%

  .section-button
    text-align center

.software
  background-image url('../img/software-bg.webp')
  background-repeat no-repeat
  background-position center
  background-size cover
  padding 39px

  &__inner
    padding 20px 85px
    border 2px solid #a09166
    border-radius 15px

  .title--gradient
    margin-bottom 15px

    span
      color #f3f3f3
      background none
      background-clip unset
      -webkit-background-clip unset
      -webkit-text-fill-color unset

      &::before
        left -50%

      &::after
        right -130%

  .section-subtitle
    font-size 22px
    line-height 1.5
    text-align center
    color #efefef

.faq
