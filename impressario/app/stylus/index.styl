  padding-bottom 250px
  padding-top 130px
  overflow hidden

  &::after
    content ''
    position absolute
    top -640px
    left 0
    right 0
    background url("data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMTkyMCIgaGVpZ2h0PSIxODU3IiB2aWV3Qm94PSIwIDAgMTkyMCAxODU3IiBmaWxsPSJub25lIiB4bWxucz0iaHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmciPgo8cGF0aCBkPSJNMTkzOC4yMiAwLjU2OTAzMUwtMjggMzM3LjQyTC0yNy45OTk5IDE4NTYuNUwxOTM4LjIyIDE0OTYuNUwxOTM4LjIyIDAuNTY5MDMxWiIgZmlsbD0iI0YzRjNGMyIvPgo8L3N2Zz4K") no-repeat
    background-position center
    width 100%
    min-height 1856px
    z-index -1

  .section-title
    margin-bottom 15px

    span
      &::before
        left -110%

      &::after
        right -285%

  .section-subtitle
    font-size 22px
    line-height 1.5
    text-align center
    color #4f4f4f
    margin-bottom 53px

  .accordion-container
    max-width 1005px
    margin 0 auto

    .ac
      border none
      margin-top 40px
      background-color transparent

      &:first-child
        margin-top 0

      .ac-trigger
        font-family $font
        font-weight 700
        font-size 22px
        color #4f4f4f
        border-bottom 1px solid #4f4f4f
        padding 8px 40px 8px 0
        
        &::after
          content ''
          background url("data:image/svg+xml;base64,") no-repeat
          background-size cover
          width 19px
          height 9px
          transition all .3s

      &.is-active
        & > .ac-header
          .ac-trigger::after
            transform rotate(-180deg)

      .ac-panel
        .ac-text
          font-family $font
          font-weight 400
          font-size 22px
          line-height 1.7
          color #4f4f4f
          padding 20px 0 0 0

        

