@media (min-width 1900px)
  .intro
    aspect-ratio 16 / 9

    .intro__scroll
      bottom 10vw

@media (max-width 1920px)
  .intro
    &::before
      width 832px
      height 832px
      right auto
      left 43vw
      bottom 135px

@media (max-width 1632px)
  .intro
    background-position 40%
    min-height 960px

    &::before
      bottom 80px
    
    &::after
      bottom 48px

  .why-us
    .section-cards
      gap 39px

@media (max-width 1248px)
  .intro
    &__info
      margin-left 0

  .commission
    &__inner 
      &::before
        font-size 175px

  .why-us
    &::after
      height 300px

    .section-cards
      justify-content center
      flex-wrap wrap

      .section-card
        width calc(50% - 39px)

@media (max-width 1051px)
  .commission
    .section-card
      &:nth-child(2),
      &:nth-child(4),
      &:last-child
        &::after
          display none

      &:nth-child(3)
        &::after
          display block

@media (max-width 960px)
  .intro
    background-position 50%
    margin-bottom -88px

    .section-title
      font-size 34px

  .commission
    &__inner 
      &::before
        font-size 140px
        top -55px

  .software
    .title--gradient
      span
        &::before
          background url("data:image/svg+xml;base64,") no-repeat
          width 45px
          left -20%

        &::after
          background url("data:image/svg+xml;base64,") no-repeat
          width 45px
          right -36%

    .section-subtitle
      font-size 20px
  
@media (max-width 768px)
  .intro
    background-position 56%

    &::before
      left 27vw

    &__info
      max-width 540px

    .section-title
      font-size 26px
      min-height 63px

    .section-subtitle
      font-size 20px

  .commission
    &__inner 
      &::before
        font-size 115px
        top -40px

  .why-us
    &::after
      height 220px

  .software
    .container
      padding 0

    &__inner
        padding 15px 25px

  .faq
    padding-bottom 130px

    &__inner 
      &::before
        font-size 115px
        top -40px

@media (max-width 715px)
  .intro
    &::before
      left 17vw

    .intro__info
      padding-top 350px

  .commission
    padding-bottom 0
    
    &::after
      display none

    .section-card
      &::after
        display none !important

    .section-cards
      gap 18px
      margin-bottom 40px

  .why-us
    padding-bottom 140px

@media (max-width 500px)
  .container
    padding 0 15px

  .intro
    background-position 50%
    min-height 740px

    &::before
      width 540px
      height 540px

    &::after
      bottom 38px
      height 25vw

    .intro__info
      max-width 100%
      padding-top 140px

    .section-title
      font-size 20px
      line-height 1.1
      margin-bottom 110px
      min-height 62px

      &::after
        bottom -60px
        left 0
        transform none

        @keyframes animateWidth
          0%
            width 0

          100%
            width 190px

    .section-subtitle
      font-size 14px
      margin-bottom 25px
      max-width 250px

    .button
      margin-left 0

  .commission
    padding-top 80px

    &__inner 
      &::before
        font-size 100px
        top -45px

    .section-title
      span
        &::before
          left -45%

        &::after
          right -133%

  .why-us
    padding-bottom 90px

    &::after
      height 130px

    .section-title
      span
        &::before
          left -85%

        &::after
          right -235%

    .section-cards
      gap 19px
      margin-bottom 40px

  .software
    padding 20px 10px

    .section-title
      span
        &::after
          right -46%

  .faq
    padding-top 90px

    &__inner 
      &::before
        font-size 100px
        top -45px
    
    &::after
      top -890px

    .section-title
      span
        &::before
          left -160%

        &::after
          right -430%

    .accordion-container
      .ac
        margin-top 20px

        .ac-trigger
          font-size 16px

        .ac-panel
          .ac-text
            font-size 16px
            line-height 1.5
            padding-top 10px

@media (max-width 375px)
  .intro
    &::before
      left 6vw

    &::after
      height 230px

    .section-title
      font-size 19px

      @keyframes animateWidth
        0%
          width 0

        100%
          width 160px

    .section-subtitle
      max-width 225px

    .intro__scroll
      bottom 15vw