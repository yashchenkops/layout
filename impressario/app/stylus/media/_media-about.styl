@media (min-width 1900px)
  .intro
    aspect-ratio 24/9

@media (max-width 1632px)
  .intro
    background-position 60%

@media (max-width 1248px)
  .intro
    &__info
      margin-left 0

@media (max-width 960px)
  .intro
    .section-title
      font-size 34px
  
@media (max-width 768px)
  .intro
    background-position 66%

    &__info
      max-width 540px

    .section-title
      font-size 26px

@media (max-width 500px)
  .intro
    margin-bottom -160px

    &__info
      max-width 540px
      padding-top 280px

    .section-title
      font-size 20px
      line-height 1.3

  .about
    .section-title
      margin-bottom 20px

      span
        &::before
          left -74%

        &::after
          right -195%

    .about__info
      margin-bottom 40px

      &-text
       font-size 16px

    &__button
      margin-bottom 120px