@import "base/_global"
@import "../includes/sections/contact/index.styl"
@import "../includes/modules/banner/index.styl"

.header__desktop
  .header__menu-link
    color #4f4f4f

  .header__right
    .button--bordered
      color #4f4f4f

.header__mobile
  .header__mobile-wrapper
    .header__right
      .header__burger-button
        span
          background-color #4f4f4f

.intro
  position relative
  padding-top 230px
  padding-bottom 250px

  &::before,
  &::after
    content ''
    position absolute
    left 0
    background url("data:image/svg+xml;base64,") no-repeat
    background-size cover
    width 2111px
    height 338px
    z-index -1

  &::before
    top 350px

  &::after
    bottom 0

  .section-title
    margin-bottom 15px

    span
      &::before
        left -60%

      &::after
        right -155%

  .section-subtitle
    font-size 22px
    line-height 1.5
    text-align center
    color #4f4f4f
    max-width 1100px
    margin 0 auto 125px

  .section-cards
    display flex
    align-items flex-start
    flex-wrap wrap
    gap 129px 110px
    margin-bottom 60px

    .card
      display flex
      align-items flex-start
      gap 29px
      width calc(50% - 55px)

      &__img
        img
          max-width 290px
          height 329px

      &__info
        max-width 340px

        &-number
          font-weight 600
          font-size 24px
          line-height 26px
          color #959595
          margin-bottom 5px

        &-title
          font-weight 600
          font-size 32px
          line-height 34p
          color #4f4f4f
          margin-bottom 20px

        &-description
          font-weight 400
          font-size 22px
          line-height 1.5
          color #4f4f4f

  .section-button
    text-align center

.contact
  margin-top 150px
  margin-bottom 50px
  
  &::before
    display none

@import "media/_media-why-us.styl"