.header__desktop
  position absolute
  top 0
  left 0
  right 0
  z-index 9
  padding 39px 15px

  .header__container
    display flex
    align-items center
    justify-content space-between
    max-width 1560px
    padding 0 30px
    margin 0 auto

  .header__left
    display flex
    align-items center
    gap 70px

  .header__logo
    img
      width 250px

  .header__menu
    &-ul
      display flex
      align-items center
      gap 45px

    &-li
      position relative

      &::after
        content ''
        position absolute
        bottom -3px
        right 0
        width 0
        height 3px
        background-color #ff592a
        transition all .3s
        border-radius 11px

      &:hover
        &::after
          width 100%
          left 0

    &-link
      padding 5px 0
      color #d4d4d4
      font-size 18px
      line-height 21px
      font-weight 500

  .header__right
    .button
      width 150px
      height 45px
      padding 12px

.header__mobile
  display none
  position relative

  .header__mobile-wrapper
    position absolute
    top 0
    left 0
    right 0
    z-index 6
    display flex
    align-items center
    justify-content space-between
    width 100%
    max-width 1560px
    margin 0 auto
    padding 40px 30px 0
    transition all 0.3s

    .header__logo
      img
        max-width 200px

    .header__right
      display flex
      align-items center
      gap 15px

      .button
        width 150px
        height 45px
        padding 12px

      .header__burger-button
        display flex
        flex-direction column
        align-items flex-start
        gap 6px
        padding 20px 10px

        span
          display inline-block
          background-color #D9D9D9
          height 3px
          border-radius 2px

          &:first-child
            width 30px

          &:nth-child(2)
            width 25px

          &:last-child
            width 35px

  .header__mobile-inner
    position fixed
    right -120%
    overflow auto
    transition all 0.5s, visibility 0.5s
    width 360px
    height 100%
    z-index 10

    .header__mobile-inner-wrapper
      position relative
      padding 40px 20px
      overflow hidden
      height 100%

      &::before
        content ''
        position absolute
        bottom 0
        left 0
        background url("data:image/svg+xml;base64,") no-repeat
        background-size cover
        width 100%
        height calc(100% - 340px)
        z-index -1

    &.is-active
      right 0
      background-color white

      .header__menu-li
        opacity 1
        transform translateX(0)

        &:nth-child(1)
          transition-delay 0.5s

        &:nth-child(2)
          transition-delay 0.7s

        &:nth-child(3)
          transition-delay 0.9s

        &:nth-child(4)
          transition-delay 1.1s

        &:nth-child(5)
          transition-delay 1.3s

        &:nth-child(6)
          transition-delay 1.5s

    .header__mobile-inner-logo
      margin-bottom 40px
      position relative
      z-index 6

      img
        width 150px

    .header__menu-close
      position absolute
      top 60px
      right 32px

    .header__menu
      width 100%
      padding 0 20px

      &-li
        margin-bottom 30px
        opacity 0
        transform translateX(-20px)
        transition opacity 0.5s, transform 0.5s

        &:last-child
          margin-bottom 0

      &-link
        display block
        width 100%
        font-weight 500
        font-size 18px
        color #4f4f4f

    .button
      margin-top 170px

@media (max-width 1320px)
  .header__desktop
    .header__left
      gap 40px

    .header__logo
      img
        width 200px

    .header__menu-ul
      gap 30px

@media (max-width 1240px)
  .header__desktop
    display none

  .header__mobile
    display flex

    .header__mobile-wrapper
      padding-top 25px

@media (max-width 768px)
  .header__mobile-inner
    &.is-active
      width 100%

  .header__mobile
    .header__mobile-inner
      .header__mobile-inner-wrapper
        &::before
          width 768px
          height calc(100% - 180px)

@media (max-width 500px)
  .header__mobile
    .header__mobile-inner
      .header__mobile-inner-wrapper
        padding 40px 15px

        &::before
          width 500px
          height calc(100% - 270px)

    .header__mobile-wrapper
      .header__logo
        img
          max-width 160px

      .header__right
        .button
          display none