.footer
  text-align center
  padding 60px 0

.footer__logo
  margin-bottom 40px

.footer__menu
  margin-bottom 40px

  &-ul
    display flex
    align-items center
    justify-content center
    gap 50px

  &-link
    font-weight 500
    font-size 18px
    color #4f4f4f

    &:hover
      text-decoration underline

  &--secondary
    .footer__menu
      &-link
        color #959595

        &--underline
          text-decoration underline

          &:hover
            text-decoration none

    .linkedin
      display inline-block
      position relative
      color #4f4f4f

      &::before
        content ''
        position absolute
        top 0
        right calc(100% + 5px)
        width 24px
        height 24px
        background url("data:image/svg+xml;base64,") no-repeat
        background-size cover

.footer__info
  font-weight 500
  font-size 18px
  color #959595

@media (max-width 1120px)
  .footer__menu
    &-ul
      gap 20px

    &-link
      font-size 16px

  .footer__info
    font-size 16px

@media (max-width 768px)
  .footer__menu
    &-ul
      flex-direction column