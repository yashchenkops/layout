.testimonials
  padding 70px 0 160px 0
  background-image url('../img/testimonials-bg.png')
  background-repeat no-repeat
  background-size cover
  margin-bottom 170px

  .title--gradient
    margin-bottom 60px

    span
      color #f3f3f3
      background none
      background-clip unset
      -webkit-background-clip unset
      -webkit-text-fill-color unset

      &::before
        left -35%

      &::after
        right -90%

  #testimonialsSlider
    position relative

  .swiper-slide
    position relative
    max-width 465px
    margin-right 20px
    padding 16px 13px 105px 26px 

    &:last-child
      margin-right 0

    &::before
    &::after
      position absolute
      content ''

    &::before
      top 0
      left 0
      background url("data:image/svg+xml;base64,") no-repeat
      width 66px
      height 52px
      background-size contain
      background-position center

    &::after
      bottom 0
      left 0
      background url("data:image/svg+xml;base64,") no-repeat
      width 475px
      height 136px
      z-index -1
      background-size contain
      background-position center

  .testimonials__slider-title
    font-family $fontTitle
    font-weight 700
    font-size 24px
    line-height 1.25
    text-transform uppercase
    color #e8e8e8
    margin-bottom 27px
    padding-left 53px
    max-width 410px

  .testimonials__slider-description
    font-weight 400
    font-size 16px
    line-height 1.4
    color #e8e8e8
    margin-bottom 20px
    max-width 410px

  .testimonials__slider-link
    position relative
    display block
    font-weight 400
    font-size 16px
    line-height 1.25
    text-decoration underline
    color #ff624a
    padding-left 74px
    max-width 410px

    &:hover
      text-decoration none

    &::after
      position absolute
      bottom 3px
      left 10px
      content ''
      width 50px
      height 2px
      background-color white

  .swiper-button-prev
  .swiper-button-next
    width 48px
    height 48px
    border-radius 50%
    background linear-gradient(45deg, #ff2b9d 0%, #ff531d 100%)
    top auto
    bottom -85px
    transition all .3s

    &::after
      content ''
      width 18px
      height 16px

  .swiper-button-prev
    left auto
    right 75px

    &::after
      background url("data:image/svg+xml;base64,") no-repeat

  .swiper-button-next
    &::after
      background url("data:image/svg+xml;base64,") no-repeat

  .swiper-button-disabled
    background transparent
    border 1px solid #FF3F5C

@media (max-width 500px)
  .testimonials
    margin-bottom 100px
    padding-bottom 120px

    .title--gradient
      margin-bottom 30px
      
      span
        &::before
          left -51%

        &::after
          right -137%
    
    .swiper-slide
      max-width 245px

      &::after
        width 295px

    .testimonials__slider-title
      padding-left 40px

    .testimonials__slider-description
      font-size 14px

    .testimonials__slider-link
      font-size 14px
      padding-left 0

      &::after
        display none

    .swiper-slide::before
      width 50px
      height 35px

    .swiper-button-prev
    .swiper-button-next
      bottom -45px