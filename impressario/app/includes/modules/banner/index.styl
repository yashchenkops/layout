.banner
  position fixed
  bottom 50px
  right 10vw
  z-index 100
  background-color #fff
  padding 20px
  border-radius 10px
  box-shadow 2px 2px 10px 2px rgba(0,0,0,0.1)
  background-image url("data:image/svg+xml;base64,")
  background-repeat no-repeat
  background-size cover
  background-position center bottom
  overflow hidden

  &.is-hidden
    display none

  &__close
    display block
    margin-left auto

  &__info
    margin-bottom 54px

    &-city
      font-family $fontTitle
      position absolute
      top 26px
      left 50%
      transform translateX(-50%)
      font-weight 700
      font-size 65px
      text-align center
      color #f6f6f6
      z-index -1

    &-meet-us
      margin-top 10px
      font-family $fontTitle
      font-weight 700
      font-size 32px
      text-align center
      color #1c1c1a

    &-name
      font-family $fontTitle
      font-weight 700
      font-size 48px
      color #df4030
      margin-bottom 7px

    &-place
      font-weight 400
      font-size 20px
      line-height 1.5
      text-align center
      color #4f4f4f

    &-stand
      font-weight 700
      font-size 24px
      color #1c1c1a
      text-align center