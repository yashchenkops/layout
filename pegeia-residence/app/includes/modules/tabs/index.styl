.cabinet__tabs
  border-radius 20px
  background-color $white
  padding 20px 40px
  width 100%
  max-width 420px
  min-height 600px

.cabinet__tabs-content
  min-height 425px

.tab-wrapper
  position relative
  text-align center
  margin-bottom 20px

.tabs
  display flex
  align-items center
  justify-content space-between

.tab-link
  font-weight 700
  font-size 16px
  line-height 16px
  text-align center
  color $text
  cursor pointer
  width 50%
  min-width 140px
  padding 12px 33px
  border-radius 8px
  transition opacity 0.3s

  &:hover
    opacity 0.7

.tab-link.active
  background-color $grey
  cursor default

  &:hover
    opacity 1

.content-wrapper
  padding 40px 80px

.tab-content
  display none
  opacity 0
  transform translateY(15px)
  animation fadeIn 0.5s ease 1 forwards

.tab-content.active
  display block

@keyframes fadeIn
  100%
    opacity 1
    transform none

@media (max-width 768px)
  .cabinet__tabs
    padding 20px 15px

@media (max-width 425px)
  .tab-link
    min-width auto