@import "base/_global"

.main__slide
  &--intro
    .intro__wrapper
      display flex
      flex-direction column
      max-width 1280px
      padding 0 15px
      position absolute
      width 100%
      margin 0 auto
      left 0
      right 0
      height 70%
      z-index 2
      bottom 20px

    .intro__slide
      user-select none

      &-img
        width 100%
        height 100%

        img
          width 100%
          height 100%
          object-fit cover

    .section-title
      font-size 90px
      line-height 0.88889
      max-width 600px

      span
        font-size 50px
        line-height 0.98447

    .intro__date
      color $white
      font-size 20px
      line-height 1
      margin-top auto
      margin-bottom 80px

    .intro__pagination
      display flex
      align-items center
      gap 18px
      position absolute
      right 0
      bottom 80px
      margin-left auto
      width max-content
      z-index 2
      transition all 0.3s

      .swiper-pagination-bullet
        width 10px
        height 10px
        margin 0
        background-color rgba(255, 255, 255, 0.8)
        border 1px solid transparent
        transition all 0.3s

        &-active
          border 1px solid $white

    .intro__slider-nav
      position absolute
      display flex
      align-items center
      justify-content center
      gap 5px
      width 100%
      bottom 80px
      z-index 2

    .intro__button-next,
    .intro__button-prev
      width 100px
      height 18px
      cursor pointer
      transition all 0.3s

      &:hover
        transform scale(1.1)

    .intro__button-next
      background-image url("../img/intro/intro-nav-next.png")

    .intro__button-prev
      background-image url("../img/intro/intro-nav-prev.png")

  &--contact
    .contact__wrapper
      min-height 100%
      display grid
      grid-template-rows auto 1fr auto

    .contact__download
      background-image url("../img/contact/full-designes-bg.webp")
      background-position center
      background-repeat no-repeat
      background-size cover
      padding 34px 100px
      margin-bottom 80px

      .container
        display flex
        align-items center
        justify-content space-between

      .section-title
        font-size 50px

        span
          font-size 40px

      .contact__buttons
        display flex
        align-items center
        gap 10px

        .button
          min-width 140px

    .contact__main
      .section-title--black
        margin-bottom 30px

      .contact__main-socials
        display flex
        align-items center
        justify-content space-between
        gap 20px
        margin-bottom 30px

      .item
        display flex
        align-items center
        justify-content space-between
        gap 10px

        &__link
          font-weight 500
          font-size 30px
          line-height 2.33333
          color $grey

      .contact-form
        text-align center

      .form__wrapper
        margin-bottom 20px

      & .button
        background-color $red

        &:hover
          background-color #dd0101
          color $white

@import "media/_media-landing.styl"