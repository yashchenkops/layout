@import "base/_global"

.main__slide
  &--intro
    .intro__wrapper
      display flex
      flex-direction column
      max-width 1280px
      padding 0 15px
      position absolute
      width 100%
      margin 0 auto
      left 0
      right 0
      height 70%
      z-index 2
      bottom 20px

    .intro__slide
      user-select none

      &-img
        width 100%
        height 100%

        img
          width 100%
          height 100%
          object-fit cover

    .section-title
      font-size 90px
      line-height 0.88889
      max-width 600px

      span
        font-size 50px
        line-height 0.98447

    .intro__date
      color $white
      font-size 20px
      line-height 1
      margin-top auto
      margin-bottom 80px

    .intro__pagination
      display flex
      align-items center
      gap 18px
      position absolute
      right 0
      bottom 80px
      margin-left auto
      width max-content
      z-index 2
      transition all 0.3s

      .swiper-pagination-bullet
        width 10px
        height 10px
        margin 0
        background-color rgba(255, 255, 255, 0.8)
        border 1px solid transparent
        transition all 0.3s

        &-active
          border 1px solid $white

    .intro__slider-nav
      position absolute
      display flex
      align-items center
      justify-content center
      gap 5px
      width 100%
      bottom 80px
      z-index 2

    .intro__button-next,
    .intro__button-prev
      width 100px
      height 18px
      cursor pointer
      transition all 0.3s

      &:hover
        transform scale(1.1)

    .intro__button-next
      background-image url("../img/intro/intro-nav-next.png")

    .intro__button-prev
      background-image url("../img/intro/intro-nav-prev.png")

  &--stages
    .stages__wrapper
      display flex
      align-items center
      justify-content space-between
      gap 20px
      padding-top 5vw
      margin-bottom 75px

    .stages__title
      max-width 420px
      width 100%

    .section-title--black
      margin-bottom 25px

    .stages__preview
      position relative

      .stages__slider-control
        position absolute
        display flex
        align-items center
        justify-content space-between
        gap 20px
        left 0
        right 0
        width 100%
        bottom -50px
        z-index 2

      .stages__slider-nav
        display flex
        align-items center
        justify-content center
        gap 5px

      .stages__button-next,
      .stages__button-prev
        width 60px
        height 34px
        cursor pointer
        transition all 0.3s

        &:hover
          transform scale(1.1)

      .stages__button-next
        background-image url("../img/stages/stages-nav-next.png")

      .stages__button-prev
        background-image url("../img/stages/stages-nav-prev.png")

      .stages__slider-count
        display flex
        align-items center
        justify-content center
        gap 5px

      .stages__inner-pagination
        font-weight 600
        font-size 20px
        line-height 1
        text-align center
        color rgba(36, 36, 36, 0.3)

      &-wrapper
        max-width 720px
        width 100%
        border-radius 10px

        .stages__slide
          width 100%
          height 430px
          overflow hidden
          border-radius 10px

          img
            width 730px
            height 100%
            object-fit cover
            border-radius 10px

    .stages__steps
      .stages__slide-thumbs
        max-width 25%

        &.swiper-slide-thumb-active
          .thumbs__item-wrapper
            // box-shadow 0px 0px 30px 5px rgba(204, 204, 204, 0.5)
            box-shadow 0px 0px 30px 5px rgb(0, 0, 0)

      .thumbs__item
        width 100%

        &-wrapper
          border-radius 10px
          padding 10px 10px 20px 10px
          max-width 220px
          color $grey
          cursor pointer
          background-color rgba(255, 153, 0, 0.5)
          transition all 0.3s

        &-status
          font-family $fontTitle
          font-weight 400
          font-size 30px
          line-height 1
          color $orange
          margin-bottom 10px

        &-number
          text-align center
          font-style italic
          font-weight 800
          font-size 25px
          line-height 1.2
          text-align center
          color $white

        &-title
          font-weight 600
          font-size 20px
          line-height 1.2

        &-description
          display none
          font-size 14px
          line-height 1.2
          font-weight 500
          margin-top 10px

        &-more
          display block
          width max-content
          margin 10px auto 0
          font-weight 400
          font-size 12px
          line-height 1.2
          text-decoration underline
          text-decoration-skip-ink none

          &:hover
            text-decoration none

        &.done
          .thumbs__item-status
            color $green

          .thumbs__item-wrapper
            background-color #8efea6

  &--contact
    .contact__wrapper
      min-height 100%
      display grid
      grid-template-rows auto 1fr auto

    .contact__download
      background-image url("../img/contact/full-designes-bg.webp")
      background-position center
      background-repeat no-repeat
      background-size cover
      padding 34px 100px
      margin-bottom 4vw

      .container
        display flex
        align-items center
        justify-content space-between

      .section-title
        font-size 50px

        span
          font-size 40px

      .contact__buttons
        display flex
        align-items center
        gap 10px

        .button
          min-width 140px

    .contact__main
      .section-title--black
        margin-bottom 30px

      .contact__main-socials
        display flex
        align-items center
        justify-content space-between
        gap 20px
        margin-bottom 30px

      .item
        display flex
        align-items center
        justify-content space-between
        gap 10px

        &__link
          font-weight 500
          font-size 30px
          line-height 2.33333
          color $grey

      .contact-form
        text-align center

      .form__wrapper
        margin-bottom 20px

      & .button
        background-color $red

        &:hover
          background-color #dd0101
          color $white

@import "media/_media-landing.styl"