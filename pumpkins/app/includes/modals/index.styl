.iziModal-overlay
  backdrop-filter blur(10px) !important

.modal
  box-shadow none

  .modal__inner
    background-repeat no-repeat
    background-size contain

  &-first
    .modal__inner
      background-image url("../img/popups/popup-bg-1.png")
      height 600px

    .modal__button
      top 380px

  &-second
    .modal__inner
      background-image url("../img/popups/popup-bg-2.png")
      height 649px

    .modal__button
      top 440px

  &-third
    .modal__inner
      background-image url("../img/popups/popup-bg-3.png")
      height 663px

    .modal__button
      top 435px

      &-inner
        width 268px

.modal__button
  position relative
  text-align center

  &-inner
    font-family "DuskDemon", sans-serif
    color #fff
    padding 3px 10px 6px
    border-radius 50px
    background-image url("../img/popups/modal-button.png")
    background-repeat no-repeat
    background-size contain
    background-position center
    text-align center
    box-shadow 0px 0px 20px 0px #21FF5F
    text-shadow 0px 4px 4px rgba(0, 0, 0, 0.25)
    font-size 45px
    line-height 1.3
    min-width 268px

    &:hover
      transform scale(0.97)

