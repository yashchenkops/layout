@import url("https://fonts.googleapis.com/css2?family=Montserrat:wght@300&display=swap")

@font-face
  font-family "DuskDemon"
  src url("../fonts/DuskDemon.woff2") format("woff2"), url("../fonts/DuskDemon.woff") format("woff")
  font-weight 400
  font-style normal

@import "../../includes/modals/index.styl"

$font = "Montserrat", sans-serif

html
  box-sizing border-box
  scroll-behavior smooth

*,
*::before,
*::after
  box-sizing inherit
  padding 0
  margin 0

body
  font-family $font
  font-weight 400
  height 100vh
  background-color black
  color white
  background-image url("../img/bg.png")
  background-repeat no-repeat
  background-position 10% center
  background-size cover
  background-attachment fixed
  overflow-x hidden

  &.overlay-2
    &::before
      content ""
      position fixed
      background radial-gradient(64% 50% at 50% 50%, rgba(47, 255, 180, 0.7) 0%, rgba(0, 92, 59, 0.7) 48.09%, rgba(0, 0, 0, 0.7) 0%)
      width 100%
      height 100%
      top 0
      left 0
      bottom 0
      right 0
      z-index 998

  &.overlay-3
    &::before
      content ""
      position fixed
      background radial-gradient(64% 50% at 50% 50%, rgba(47, 255, 180, 0.7) 0%, rgba(0, 92, 59, 0.7) 48.09%, rgba(0, 0, 0, 0.7) 0%)
      width 100%
      height 100%
      top 0
      left 0
      bottom 0
      right 0
      z-index 998

main
  flex 1 0 auto

a
  display inline-block
  text-decoration none
  outline none

  &:focus-visible
    outline solid

p,
span,
ul,
ol,
li,
input,
textarea
  font-family $font
  color black

ul,
li,
ol
  list-style none
  padding 0
  margin 0

h1,
h2,
h3,
h4,
h5,
h6
  font-family $font
  font-weight 500
  margin 0
  padding 0
  color black

h1
  font-size 7rem
  line-height 6rem
  font-weight 700

h2
  font-size 6rem

h3
  font-size 2rem

h4
  font-size 1.6rem

button
  border none
  outline none
  cursor pointer
  background-color transparent
  color black
  transition all 0.1s

  &:focus-visible
    outline solid

.container
  max-width 830px
  margin 0 auto
  padding 0 15px

.scroll-block
  overflow hidden
