@import url('https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500;900&display=swap')

$font = 'Roboto', sans-serif

html
  box-sizing border-box
  font-size 62.5% //1rem =10px; 10px/16px = 62.5%

  @media (max-width 1024px)
    font-size 50% //1rem =8px; 8px/16px = 50%

  @media (max-width 768px)
    // this defines what 1rem is
    font-size 40% //1rem = 6.4; 6.4px/16px = 40%
*,
*::before,
*::after
  box-sizing inherit
  padding 0
  margin 0

body
  font-family $font
  font-weight 400
  background-color $bg
  color $white
  overflow hidden

a
  display inline-block
  text-decoration none
  color $link
  outline none

  &:focus-visible
    box-shadow 0px 0px 6px 2px rgba(0, 0, 0, 0.3)
  
p,
span,
ul,
ol,
li,
input,
textarea
  font-family $font

ul,
li,
ol
  list-style none
  padding 0
  margin 0

h1,
h2,
h3,
h4
  font-weight 500
  margin 0
  padding 0
  color $white

h1
  font-size 6.4rem

h2
  font-size 4.8rem

h3
  font-size 2rem

h4
  font-size 1.6rem

button
  border none
  outline none
  cursor pointer
  background-color transparent
  color $white

  &:focus-visible
    box-shadow 0px 0px 6px 2px rgba(0, 0, 0, 0.3)

.container
  max-width 1020px
  margin 0 auto
  padding 0 3rem
  
  
.button
  background-color $orange
  border-radius 4px
  padding 0.8rem 1.2rem
  color $white
  font-weight 600
  font-size 1.2rem
  line-height 1.6rem

  &:hover
    background-color $orangeHover

  // &:disabled
   // background-color $placeholder

@keyframes animateWidth {
  from {
    width 0
  }
  to {
    width 100%
  }
}