.footer
  flex-shrink 0
  padding-bottom 40px
  background linear-gradient(180deg, rgba(211, 82, 207, 0) 0%, rgba(158, 19, 153, 0.3) 9.2%, rgba(142, 12, 137, 0.58) 25.56%, rgba(121, 2, 116, 0.7) 42.96%, rgba(51, 0, 68, 0.9) 100%)

.footer__icons
  display flex
  align-items center
  justify-content center
  flex-wrap wrap
  gap 10px
  margin-bottom 20px
  user-select none

  &-item
    display block
    transition all 0.3s
    width 100px
    height 40px

    img
      width 100%

.footer__info
  font-weight 300
  font-size 10px
  color white

@media (max-width 768px)
  .footer__icons-item
    width 90px

  .footer
    padding-bottom 15px
    